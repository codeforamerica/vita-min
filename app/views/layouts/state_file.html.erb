<%= extends :application do %>
  <% content_for :app_name do %>State File<% end %>
  <% content_for :body_class, "state-file us-state--#{params[:us_state]}" %>
  <% content_for :html_class, "state-file-html-bg--#{params[:us_state]}" %>
  <% content_for :head_links do %>
    <link href='https://fonts.googleapis.com/css?family=Public Sans' rel='stylesheet' />
  <% end %>
  <% content_for :head_js do %>
    <%= javascript_pack_tag 'application', 'state_file', defer: true %>
  <% end %>

  <% content_for :header do %>
    <% render 'state_file/state_file_pages/header' %>
  <% end %>

  <% content_for :footer do %>
    <% render 'state_file/state_file_pages/footer' %>
  <% end %>

  <% content_for :meta_tags do %>
    <meta property="og:title" content="<%= content_for(:page_title) || I18n.t("general.title") %>">
    <meta property="description" content="<%= I18n.t("general.description") %>">
    <meta property="og:title" content="<%= content_for(:page_title) || I18n.t("general.title") %>">
    <meta name="og:description" content="<%= I18n.t("general.description") %>">
    <meta property="og:image" content="<%= image_url("state-file-thumbnail.png") %>">
  <% end %>
  <%= yield %>
<% end %>
