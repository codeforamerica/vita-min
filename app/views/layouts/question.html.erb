<% content_for :page_title do %>
  <% if @form&.errors.present? %>
    <%= @form.error_summary %>
  <% end %>
  <%= yield :form_question %>
<% end %>

<% content_for :main do %>
  <section class="slab slab--white">
    <div class="grid">
      <div class="grid__item width-three-fourths shift-one-eighth">
        <%= yield :notices %>
        <main role="main">
          <% if illustration_path.present? %>
            <div class="question__illustration spacing-above-0">
              <%= image_tag("questions/#{illustration_path}", alt: "") %>
            </div>
          <% end %>
          <%= yield :form_card %>
        </main>
      </div>
    </div>
  </section>
<% end %>

<%= render template: "layouts/application" %>
