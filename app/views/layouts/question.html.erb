<% content_for :main do %>
  <section class="slab slab--white">
    <div class="grid">
      <div class="grid__item width-three-fourths shift-one-eighth">
        <%= yield :notices %>
        <% if section_title %>
          <h3 class="section-title">
            <%= image_tag("#{section_title.parameterize}.svg", alt: "") %>
            <%= section_title %>
          </h3>
        <% end %>
        <main role="main">
          <% if illustration_path.present? %>
            <div class="question__illustration <%= "spacing-above-0" if !section_title %>">
              <%= image_tag("questions/#{illustration_path}", alt: "") %>
            </div>
          <% end %>
          <%= yield :form_card %>
        </main>
      </div>
    </div>
  </section>
<% end %>

<%= render template: "layouts/application" %>
