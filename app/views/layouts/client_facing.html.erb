<% content_for :body do %>
  <div class="page-wrapper">
    <header class="main-header">
      <div class="toolbar">
        <div class="toolbar__left">
          <div class="toolbar__item main-header__title">
            <%= link_to root_path, class: "toolbar__logo-text main-header__logo" do %>
              VitaTaxHelp.org
            <% end %>
          </div>
        </div>
<!--        <div class="toolbar__right">-->
<!--          <button class="toolbar__item button button--small">Feedback</button>-->
<!--        </div>-->
      </div>
    </header>

    <main role="main">
      <%= yield %>
    </main>

    <footer class="footer">
      <div class="slab slab--footer">
        <div class="grid">
          <div class="grid__item width-seven-twelfths spacing-below-60">
            <p>
              VitaTaxHelp.org is a service delivered by Code for America in
              partnership with VITA organizations nationally.
            </p>
          </div>
          <div class="grid__item width-five-twelfths">
            <div class="footer__logos">
              <%= link_to("https://www.codeforamerica.org", target: "_blank", class: "footer__cfa-logo") do %>
                <%= image_tag("cfa-logo--white.svg", alt: "Code for America website") %>
              <% end %>

              <%= link_to("https://www.irs.gov/individuals/free-tax-return-preparation-for-you-by-volunteers", target: "_blank", class: "footer__vita-logo") do %>
                <%= image_tag("vita-logo--white.png", alt: "IRS website for the Volunteer Income Tax Assistance program") %>
              <% end %>
            </div>
          </div>
        </div>
      </div>

    </footer>
  </div>
<% end %>

<%= render template: "layouts/application" %>
