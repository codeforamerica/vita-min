<% content_for :page_title do %>
  <% if @form&.errors.present? %>
    <%= @form.error_summary %>
  <% end %>
  <%= yield :title %>
<% end %>

<% content_for :main do %>
  <section class="slab slab--white">
    <div class="grid">
      <div class="grid__item width-three-fourths shift-one-eighth">
        <%= yield :notices %>
        <main role="main">
          <%= yield :card %>
        </main>
      </div>
    </div>
  </section>
<% end %>

<%= render template: "layouts/application" %>
