<%= extends wrapping_layout do %>
  <% content_for :page_title do %>
    <% if @form&.errors.present? %>
      <%= @form.error_summary %>
    <% end %>
    <%= yield :title %>
  <% end %>

  <% content_for :main do %>
    <section class="slab slab--white slab--not-padded portal-layout">
      <div class="grid">
        <div class="grid__item width-three-fourths">
          <%= yield :notices %>
          <div class="main-content-inner">
            <%= yield :card %>
          </div>
        </div>
      </div>
    </section>
    <%= yield :extra_slabs %>
  <% end %>
<% end %>
