<% variation ||= nil %>
<footer class="footer">
  <div class="slab slab--footer">
    <div class="grid">
      <div class="grid__item width-three-fourths footer-description">
        <p>
          <%= image_tag("checkbox-logo--white.png", alt: "") %>
        </p>
        <p>
          <% cfa_link = link_to("Code for America", "https://www.codeforamerica.org", target: "_blank", rel: "noopener", class: "footer__link") %>
          <% if variation == "ctc" %>
            <%= t("views.shared.footer.ctc_service_description_html", link: cfa_link) %>
          <% else %>
            <%= t("views.shared.footer.service_description_html",
                  cfa_link: cfa_link,
                  vita_link: link_to("VITA", "https://www.irs.gov/individuals/free-tax-return-preparation-for-you-by-volunteers", target: "_blank", rel: "noopener", class: "footer__link")) %>
          <% end %>
        </p>
      </div>

      <ul class="grid__item width-one-fourth footer-links">
        <li>
          <%= link_to privacy_path do %>
            <%= t("views.public_pages.privacy_policy.title") %>
          <% end %>
        </li>

        <li>
          <%= link_to faq_path do %>
            <%= t("general.faq") %>
          <% end %>
        </li>

        <% unless variation == "ctc" %>
          <li>
            <%= mail_to "support@getyourrefund.org", t("general.contact_us")  %>
          </li>

          <li>
            <%= link_to about_us_path do %>
              <%= t("views.public_pages.about_us.title") %>
            <% end %>
          </li>

          <li>
            <%= link_to vita_providers_path do %>
              <%= t("general.find_location") %>
            <% end %>
          </li>

          <li>
            <%= link_to new_user_session_path do %>
              <%= t("views.shared.footer.volunteer_sign_in") %>
            <% end %>
          </li>
        <% end %>

        <li>
          <%= link_to "https://www.getyourrefundstatus.org/" do %>
            <%= t("views.shared.footer.service_status") %>
          <% end %>
        </li>

        <% unless Rails.env.production? %>
          <li><%= link_to "Flow explorer", flows_path %></li>
        <% end %>
      </ul>

    </div>
  </div>
</footer>
