<div class="slab slab--service-comparison">
  <div class="grid">
    <div class="service-comparison">
      <h2 class="title spacing-above-0">
        <%= t("views.shared.service_comparison.title_html") %>
      </h2>
      <p class="text--centered spacing-above-15"><%= t("views.shared.service_comparison.always_free") %></p>
      <p class="text--centered spacing-below-35"><%= t("views.shared.service_comparison.in_person") %> <%= link_to t("views.shared.service_comparison.in_person_link_text"), vita_providers_path, "data-track-click": "service-comparison-in-person-vita-providers"%>.</p>
      <div class="comparison-component">
        <div class="service-set service-set--service-description">
          <div class="service-set__header"></div>
          <div class="service-set__services">
            <div class="service ctc">
              <div>
                <h2 class="service__service-name">
                  <%= t("views.shared.service_comparison.services.ctc.service_name") %>
                </h2>
              </div>
              <div class="service__description">
                <%= t("views.shared.service_comparison.services.ctc.service_description") %>
              </div>
              <% unless open_for_ctc_intake? %>
                <div class="service__availability">
                  <%= t("views.shared.service_comparison.services.ctc.coming_soon") %>
                </div>
              <% end %>
              <div class="service__cta">
                <% if open_for_ctc_intake? %>
                  <%= link_to t("views.shared.service_comparison.services.ctc.cta.open"),
                              root_with_source_path(host: MultiTenantService.new(:ctc).host, source: "gyractivechoice"),
                              class: "button", "data-track-click": "service-comparison-ctc" %>
                <% else %>
                  <%= link_to t("views.shared.service_comparison.services.ctc.cta.closed"),
                              url_for(host: MultiTenantService.new(:ctc).host, controller: "/signups", action: "new"),
                              class: "button", "data-track-click": "service-comparison-ctc" %>
                <% end %>
              </div>
            </div>
            <div class="service full-service">
              <div>
                <h2 class="service__service-name">
                  <%= t("views.shared.service_comparison.services.full_service.service_name") %>
                </h2>
              </div>
              <div class="service__description">
                <%= t("views.shared.service_comparison.services.full_service.service_description") %>
              </div>
              <% if open_for_ctc_intake? %>
                <div class="service__availability">
                  <%= t("views.shared.service_comparison.services.full_service.limited_availability") %>
                </div>
              <% end %>
              <div class="service__cta">
                <%= link_to t("views.shared.service_comparison.services.full_service.cta"), Questions::OverviewController.to_path_helper, class: "button", "data-track-click": "service-comparison-full-service" %>
              </div>
            </div>
            <div class="service diy">
              <div>
                <h2 class="service__service-name">
                  <%= t("views.shared.service_comparison.services.diy.service_name") %>
                </h2>
              </div>
              <div class="service__description">
                <%= t("views.shared.service_comparison.services.diy.service_description") %>
              </div>
              <div class="service__cta">
                <%= link_to t("views.shared.service_comparison.services.diy.cta"), diy_path, class: "button", "data-track-click": "service-comparison-diy" %>
              </div>
            </div>
          </div>
        </div>
        <div class="service-set service-set--mobile-only mobile-sticky-header">
          <div class="service-set__header">
          </div>
          <div class="service-set__services">
            <div class="service ctc">
              <strong><%= t("views.shared.service_comparison.services.ctc.service_name") %></strong>
            </div>
            <div class="service full-service">
              <strong><%= t("views.shared.service_comparison.services.full_service.service_name_short") %></strong>
            </div>
            <div class="service diy">
              <strong><%= t("views.shared.service_comparison.services.diy.service_name") %></strong>
            </div>
          </div>
        </div>

        <div class="service-set service-set--hr">
          <div class="service-set__header">
            <div class="service-set__title">
              <%= t("views.shared.service_comparison.income_limit.title") %>
            </div>
          </div>

          <div class="service-set__services">
            <div class="service ctc">
              <%= t("views.shared.service_comparison.income_limit.ctc_html") %>
            </div>
            <div class="service full-service">
              <%= t("views.shared.service_comparison.income_limit.full_service") %>
            </div>
            <div class="service diy">
              <%= t("views.shared.service_comparison.income_limit.diy") %>
            </div>
          </div>
        </div>
        <div class="service-set service-set--hr">
          <div class="service-set__header">
            <div class="service-set__title">
              <%= t("views.shared.service_comparison.filing_years.title") %>
            </div>
          </div>
          <div class="service-set__services">
            <div class="service ctc">
              <%= TaxReturn.current_tax_year %>
            </div>
            <div class="service full-service">
              <%= TaxReturn.filing_years.first %>-<%= TaxReturn.filing_years.last %>
            </div>
            <div class="service diy">
              <%= TaxReturn.current_tax_year %>
            </div>
          </div>
        </div>
        <div class="service-set service-set--hr">
          <div class="service-set__header">
            <div class="service-set__title">
              <%= t("views.shared.service_comparison.time_to_file.title") %>
            </div>
            <div class="service-set__subtitle service-set__header--limited">
              <%= t("views.shared.service_comparison.time_to_file.subtitle") %>
            </div>
          </div>
          <div class="service-set__services">
            <div class="service ctc">
              <%= t("views.shared.service_comparison.time_to_file.ctc") %>
            </div>
            <div class="service full-service">
              <%= t("views.shared.service_comparison.time_to_file.full_service") %>
            </div>
            <div class="service diy">
              <%= t("views.shared.service_comparison.time_to_file.diy") %>
            </div>
          </div>
        </div>
        <div class="service-set">
          <div class="service-set__header">
            <div class="service-set__title">
              <%= t("views.shared.service_comparison.required_information") %>
            </div>
          </div>
          <div class="service-set__services service-set--mobile-excluded">
            <div class="service ctc"></div>
            <div class="service full-service"></div>
            <div class="service diy"></div>
          </div>
        </div>
        <div class="service-set">
          <div class="service-set__header service-set__header--limited">
            <div class="service-set__title service-set__title--normal">
              <%= t("views.shared.service_comparison.id_documents.title") %>
            </div>
          </div>
          <div class="service-set__services">
            <div class="service ctc">
              <%= t("views.shared.service_comparison.id_documents.ctc") %>
            </div>
            <div class="service full-service">
              <%= t("views.shared.service_comparison.id_documents.full_service") %>
            </div>
            <div class="service diy">
              <%= t("views.shared.service_comparison.id_documents.diy") %>
            </div>
          </div>
        </div>
        <div class="service-set service-set--hr">
          <div class="service-set__header">
            <div class="service-set__title service-set__title--normal">
              <%= t("views.shared.service_comparison.tax_documents.title") %>
            </div>
            <div class="service-set__subtitle">
              <%= t("views.shared.service_comparison.tax_documents.subtitle") %>
            </div>
          </div>
          <div class="service-set__services">
            <div class="service ctc">
            </div>
            <div class="service full-service">
              <%= image_tag "icons/check-outline.svg", alt: t("general.affirmative"), class: "service-comparison--icon" %>
            </div>
            <div class="service diy">
              <%= image_tag "icons/check-outline.svg", alt: t("general.affirmative"), class: "service-comparison--icon" %>
            </div>
          </div>
        </div>
        <div class="service-set">
          <div class="service-set__header">
            <div class="service-set__title">
              <%= t("views.shared.service_comparison.credits_and_payments") %>
            </div>
          </div>
          <div class="service-set__services">
            <div class="service ctc">
              <%= image_tag "icons/cash.svg", alt:  t("views.shared.service_comparison.most_tax_credits"), class: "service-comparison--icon" %>
            </div>
            <div class="service full-service">
              <%= image_tag "icons/lots-of-cash.svg", alt:  t("views.shared.service_comparison.all_tax_credits"), class: "service-comparison--icon" %>
            </div>
            <div class="service diy">
              <%= image_tag "icons/lots-of-cash.svg", alt:  t("views.shared.service_comparison.all_tax_credits"), class: "service-comparison--icon" %>
            </div>
          </div>
        </div>
        <div class="service-set">
          <div class="service-set__header">
            <div class="service-set__title service-set__title--normal">
              <%= t("views.shared.service_comparison.child_tax_credit") %>
            </div>
          </div>
          <div class="service-set__services">
            <div class="service ctc">
              <%= image_tag "icons/check-outline.svg", alt: t("general.affirmative"), class: "service-comparison--icon"  %>
            </div>
            <div class="service full-service">
              <%= image_tag "icons/check-outline.svg", alt: t("general.affirmative"), class: "service-comparison--icon" %>
            </div>
            <div class="service diy">
              <%= image_tag "icons/check-outline.svg", alt: t("general.affirmative"), class: "service-comparison--icon" %>
            </div>
          </div>
        </div>
        <div class="service-set">
          <div class="service-set__header">
            <div class="service-set__title service-set__title--normal">
              <%= t("views.shared.service_comparison.stimulus_payments") %>
            </div>
          </div>
          <div class="service-set__services">
            <div class="service ctc">
              <%= image_tag "icons/check-outline.svg", alt: t("general.affirmative"), class: "service-comparison--icon" %>
            </div>
            <div class="service full-service">
              <%= image_tag "icons/check-outline.svg", alt: t("general.affirmative"), class: "service-comparison--icon" %>
            </div>
            <div class="service diy">
              <%= image_tag "icons/check-outline.svg", alt: t("general.affirmative"), class: "service-comparison--icon" %>
            </div>
          </div>
        </div>
        <div class="service-set">
          <div class="service-set__header">
            <div class="service-set__title service-set__title--normal">
              <%= t("views.shared.service_comparison.earned_income_tax_credit") %>
            </div>
          </div>
          <div class="service-set__services">
            <div class="service ctc">
            </div>
            <div class="service full-service">
              <%= image_tag "icons/check-outline.svg", alt: t("general.affirmative"), class: "service-comparison--icon" %>
            </div>
            <div class="service diy">
              <%= image_tag "icons/check-outline.svg", alt: t("general.affirmative"), class: "service-comparison--icon" %>
            </div>
          </div>
        </div>
        <div class="service-set service-set--hr">
          <div class="service-set__header">
            <div class="service-set__title service-set__title--normal">
              <%= t("views.shared.service_comparison.state_credits") %>
            </div>
          </div>
          <div class="service-set__services">
            <div class="service ctc">
            </div>
            <div class="service full-service">
              <%= image_tag "icons/check-outline.svg", alt: t("general.affirmative"), class: "service-comparison--icon" %>
            </div>
            <div class="service diy">
              <%= image_tag "icons/check-outline.svg", alt: t("general.affirmative"), class: "service-comparison--icon" %>
            </div>
          </div>
        </div>
        <div class="service-set">
          <div class="service-set__header">
            <div class="service-set__title service-set__title">
              <%= t("views.shared.service_comparison.additional_benefits") %>
            </div>
          </div>
          <div class="service-set__services service-set--mobile-excluded">
            <div class="service ctc">
            </div>
            <div class="service full-service">
            </div>
            <div class="service diy">
            </div>
          </div>
        </div>
        <div class="service-set">
          <div class="service-set__header">
            <div class="service-set__title service-set__title--normal">
              <%= t("views.shared.service_comparison.chat_support") %>
            </div>
          </div>
          <div class="service-set__services">
            <div class="service ctc service--mobile-flex-start">
              <%= image_tag "icons/check-outline.svg", alt: t("general.affirmative"), class: "service-comparison--icon" %>
            </div>
            <div class="service full-service service--mobile-flex-start">
              <%= image_tag "icons/check-outline.svg", alt: t("general.affirmative"), class: "service-comparison--icon" %>
            </div>
            <div class="service diy service--mobile-flex-start service--fixie-parent">
              <%= image_tag "icons/check-outline.svg", alt: t("general.affirmative"), class: "service-comparison--icon" %>
              <div class="service-set__subtitle service-set__subtitle--fixie">
                <%= t("views.shared.service_comparison.support_via_gyr") %>
              </div>
            </div>
          </div>
        </div>
        <div class="service-set">
          <div class="service-set__header">
            <div class="service-set__title service-set__title--normal">
              <%= t("views.shared.service_comparison.itin_assistance") %>
            </div>
          </div>
          <div class="service-set__services">
            <div class="service ctc">
            </div>
            <div class="service full-service">
              <%= image_tag "icons/check-outline.svg", alt: t("general.affirmative"), class: "service-comparison--icon" %>
            </div>
            <div class="service diy">
            </div>
          </div>
        </div>
        <div class="service-set">
          <div class="service-set__header">
            <div class="service-set__title service-set__title--normal">
              <%= t("views.shared.service_comparison.vita") %>
            </div>
          </div>
          <div class="service-set__services">
            <div class="service ctc">
            </div>
            <div class="service full-service">
              <%= image_tag "icons/check-outline.svg", alt: t("general.affirmative"), class: "service-comparison--icon" %>
            </div>
            <div class="service diy">
            </div>
          </div>
        </div>

      </div>
      <h2 class="title spacing-above-35">
        <%= t("views.shared.service_comparison.still_need_help") %>
      </h2>
      <p class="spacing-above-15 spacing-below-0 text--centered text--semibold"><%= link_to  t("views.shared.service_comparison.triage_link_text"), triage_gyr_questions_path, "data-track-click": "service-comparison-triage" %></p>
    </div>
  </div>
</div>