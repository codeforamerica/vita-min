<div class="slab slab--service-comparison">
  <div class="grid">
    <div class="service-comparison">
      <h2 class="title spacing-above-0">
        <%= t("views.shared.service_comparison.title_html") %>
      </h2>
      <p class="text--centered spacing-above-15"><%= t("views.shared.service_comparison.all_services") %></p>
      <p class="text--centered spacing-below-35"><%= t("views.shared.service_comparison.in_person") %> <%= link_to t("views.shared.service_comparison.in_person_link_text"), vita_providers_path, "data-track-click": "service-comparison-in-person-vita-providers"%>.</p>
      <div class="comparison-component">
        <div class="service-set service-set--service-description">
          <div class="service-set__header"></div>
          <div class="service-set__services">
            <div class="service full-service">
              <div>
                <h2 class="service__service-name">
                  <%= t("views.shared.service_comparison.services.full_service.service_name") %>
                </h2>
              </div>
              <div class="service__description">
                <%= t("views.shared.service_comparison.services.full_service.service_description") %>
              </div>
              <div class="service__cta">
                <% if open_for_gyr_intake? %>
                  <%= link_to t("views.shared.service_comparison.services.full_service.cta"), Questions::PersonalInfoController.to_path_helper, class: "button", "data-track-click": "service-comparison-full-service" %>
                <% else %>
                  <%= link_to t("views.shared.service_comparison.services.full_service.cta"), new_signup_path, class: "button", "data-track-click": "service-comparison-full-service" %>
                <% end %>
              </div>
            </div>
            <div class="service diy">
              <div>
                <h2 class="service__service-name">
                  <%= t("views.shared.service_comparison.services.diy.service_name") %>
                </h2>
              </div>
              <div class="service__description">
                <%= t("views.shared.service_comparison.services.diy.service_description", year: MultiTenantService.new(:gyr).current_tax_year) %>
              </div>
              <div class="service__cta">
                <%= link_to t("views.shared.service_comparison.services.diy.cta"), Diy::FileYourselfController.to_path_helper, class: "button", "data-track-click": "service-comparison-diy" %>
              </div>
            </div>
            <% if app_time.before?(Rails.configuration.state_file_end_of_in_progress_intakes) %>
              <div class="service direct-file">
                <div>
                  <h2 class="service__service-name">
                    <%= t("views.shared.service_comparison.services.direct_file.service_name") %>
                  </h2>
                </div>
                <div class="service__description">
                  <%= t("views.shared.service_comparison.services.direct_file.service_description") %>
                </div>
                <div class="service__cta">
                  <%= link_to t("views.shared.service_comparison.services.direct_file.cta"), "https://directfile.irs.gov/?utm_source=CA-Nonprofit&utm_medium=email&utm_campaign=gyr&utm_id=directfile&utm_content=QRcode" ,class: "button", "data-track-click": "service-comparison-direct-file"%>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        <div class="service-set service-set--mobile-only mobile-sticky-header">
          <div class="service-set__header">
          </div>
          <div class="service-set__services">
            <div class="service full-service">
              <strong><%= t("views.shared.service_comparison.services.full_service.service_name_short") %></strong>
            </div>
            <div class="service diy">
              <strong><%= t("views.shared.service_comparison.services.diy.service_name") %></strong>
            </div>
            <% if app_time.before?(Rails.configuration.state_file_end_of_in_progress_intakes) %>
              <div class="service direct-file">
                <strong><%= t("views.shared.service_comparison.services.direct_file.service_name") %></strong>
              </div>
            <% end %>
          </div>
        </div>

        <div class="service-set service-set--hr">
          <div class="service-set__header">
            <div class="service-set__title">
              <%= t("views.shared.service_comparison.income_limit.title") %>
            </div>
          </div>

          <div class="service-set__services">
            <div class="service full-service">
              <%= t("views.shared.service_comparison.income_limit.full_service") %>
            </div>
            <div class="service diy">
              <%= t("views.shared.service_comparison.income_limit.diy") %>
            </div>
            <% if app_time.before?(Rails.configuration.state_file_end_of_in_progress_intakes) %>
              <div class="service direct-file">
                <%= t("views.shared.service_comparison.income_limit.direct_file") %>
              </div>
            <% end %>
          </div>
        </div>
        <div class="service-set service-set--hr">
          <div class="service-set__header">
            <div class="service-set__title">
              <%= t("views.shared.service_comparison.filing_years.title") %>
            </div>
          </div>
          <div class="service-set__services">
            <div class="service full-service">
              <%= gyr_filing_years.last %>-<%= gyr_filing_years.first %>
            </div>
            <div class="service diy">
              <%= MultiTenantService.new(:gyr).current_tax_year %>
            </div>
            <% if app_time.before?(Rails.configuration.state_file_end_of_in_progress_intakes) %>
              <div class="service direct-file">
                <%= MultiTenantService.new(:gyr).current_tax_year %>
              </div>
            <% end %>
          </div>
        </div>
        <div class="service-set service-set--hr">
          <div class="service-set__header">
            <div class="service-set__title">
              <%= t("views.shared.service_comparison.time_to_file.title") %>
            </div>
            <div class="service-set__subtitle service-set__header--limited">
              <%= t("views.shared.service_comparison.time_to_file.subtitle") %>
            </div>
          </div>
          <div class="service-set__services">
            <div class="service full-service">
              <%= t("views.shared.service_comparison.time_to_file.full_service") %>
            </div>
            <div class="service diy">
              <%= t("views.shared.service_comparison.time_to_file.diy") %>
            </div>
            <% if app_time.before?(Rails.configuration.state_file_end_of_in_progress_intakes) %>
              <div class="service direct-file">
                <%= t("views.shared.service_comparison.time_to_file.diy") %>
              </div>
            <% end %>
          </div>
        </div>
        <div class="service-set">
          <div class="service-set__header">
            <div class="service-set__title">
              <%= t("views.shared.service_comparison.required_information") %>
            </div>
          </div>
          <div class="service-set__services service-set--mobile-excluded">
            <div class="service full-service"></div>
            <div class="service diy"></div>
            <% if app_time.before?(Rails.configuration.state_file_end_of_in_progress_intakes) %>
              <div class="service direct-file"></div>
            <% end %>
          </div>
        </div>
        <div class="service-set">
          <div class="service-set__header service-set__header--limited">
            <div class="service-set__title service-set__title--normal">
              <%= t("views.shared.service_comparison.id_documents.title") %>
            </div>
          </div>
          <div class="service-set__services">
            <div class="service full-service">
              <%= t("views.shared.service_comparison.id_documents.full_service") %>
            </div>
            <div class="service diy">
              <%= t("views.shared.service_comparison.id_documents.diy") %>
            </div>
            <% if app_time.before?(Rails.configuration.state_file_end_of_in_progress_intakes) %>
              <div class="service direct-file">
                <%= t("views.shared.service_comparison.id_documents.diy") %>
              </div>
            <% end %>
          </div>
        </div>
        <div class="service-set service-set--hr">
          <div class="service-set__header">
            <div class="service-set__title service-set__title--normal">
              <%= t("views.shared.service_comparison.tax_documents.title") %>
            </div>
            <div class="service-set__subtitle">
              <%= t("views.shared.service_comparison.tax_documents.subtitle") %>
            </div>
            <% if app_time.before?(Rails.configuration.state_file_end_of_in_progress_intakes) %>
              <div class="service-set__subtitle">
                <%= t("views.shared.service_comparison.tax_documents.subtitle") %>
              </div>
            <% end %>
          </div>
          <div class="service-set__services">
            <div class="service full-service">
              <%= image_tag "icons/check-outline.svg", alt: t("general.affirmative"), class: "service-comparison--icon" %>
            </div>
            <div class="service diy">
              <%= image_tag "icons/check-outline.svg", alt: t("general.affirmative"), class: "service-comparison--icon" %>
            </div>
            <% if app_time.before?(Rails.configuration.state_file_end_of_in_progress_intakes) %>
              <div class="service direct-file">
                <%= image_tag "icons/check-outline.svg", alt: t("general.affirmative"), class: "service-comparison--icon" %>
              </div>
            <% end %>
          </div>
        </div>
        <div class="service-set service-set--hr">
          <div class="service-set__header">
            <div class="service-set__title">
              <%= t("views.shared.service_comparison.tax_payer_residency.title") %>
            </div>
          </div>
          <div class="service-set__services">
            <div class="service full-service">
              <%= t("views.shared.service_comparison.tax_payer_residency.full_service_html") %>
            </div>
            <div class="service diy">
              <%= t("views.shared.service_comparison.tax_payer_residency.diy") %>
            </div>
            <% if app_time.before?(Rails.configuration.state_file_end_of_in_progress_intakes) %>
              <div class="service direct-file">
                <%= t("views.shared.service_comparison.tax_payer_residency.direct_file") %>
              </div>
            <% end %>
          </div>
        </div>
        <div class="service-set">
          <div class="service-set__header">
            <div class="service-set__title service-set__title">
              <%= t("views.shared.service_comparison.additional_benefits") %>
            </div>
          </div>
          <div class="service-set__services service-set--mobile-excluded">
            <div class="service full-service">
            </div>
            <div class="service diy">
            </div>
            <% if app_time.before?(Rails.configuration.state_file_end_of_in_progress_intakes) %>
              <div class="service direct-file">
              </div>
            <% end %>
          </div>
        </div>
        <div class="service-set">
          <div class="service-set__header">
            <div class="service-set__title service-set__title--normal">
              <%= t("views.shared.service_comparison.chat_support") %>
            </div>
          </div>
          <div class="service-set__services">
            <div class="service full-service service--mobile-flex-start">
              <%= image_tag "icons/check-outline.svg", alt: t("general.affirmative"), class: "service-comparison--icon" %>
            </div>
            <div class="service diy">
            </div>
            <% if app_time.before?(Rails.configuration.state_file_end_of_in_progress_intakes) %>
              <div class="service direct-file">
                <%= image_tag "icons/check-outline.svg", alt: t("general.affirmative"), class: "service-comparison--icon" %>
              </div>
            <% end %>
          </div>
        </div>
        <div class="service-set">
          <div class="service-set__header">
            <div class="service-set__title service-set__title--normal">
              <%= t("views.shared.service_comparison.mobile_friendly") %>
            </div>
          </div>
          <div class="service-set__services">
            <div class="service full-service service--mobile-flex-start">
              <%= image_tag "icons/check-outline.svg", alt: t("general.affirmative"), class: "service-comparison--icon" %>
            </div>
            <div class="service diy">
            </div>
            <% if app_time.before?(Rails.configuration.state_file_end_of_in_progress_intakes) %>
              <div class="service direct-file">
                <%= image_tag "icons/check-outline.svg", alt: t("general.affirmative"), class: "service-comparison--icon" %>
              </div>
            <% end %>
          </div>
        </div>
        <div class="service-set">
          <div class="service-set__header">
            <div class="service-set__title service-set__title--normal">
              <%= t("views.shared.service_comparison.vita") %>
            </div>
          </div>
          <div class="service-set__services">
            <div class="service full-service">
              <%= image_tag "icons/check-outline.svg", alt: t("general.affirmative"), class: "service-comparison--icon" %>
            </div>
            <div class="service diy">
            </div>
            <% if app_time.before?(Rails.configuration.state_file_end_of_in_progress_intakes) %>
              <div class="service direct-file">
              </div>
            <% end %>
          </div>
        </div>
        <div class="service-set">
          <div class="service-set__header">
          </div>
          <div class="service-set__services spacing-above-15">
           <%= t("views.shared.service_comparison.select_service_html") %>
          </div>
        </div>
      </div>

      <% if open_for_gyr_intake? %>
        <h2 class="title spacing-above-35">
          <%= t("views.shared.service_comparison.still_need_help") %>
        </h2>
        <p class="spacing-above-15 spacing-below-0 text--centered text--semibold"><%= link_to  t("views.shared.service_comparison.triage_link_text"), Questions::TriagePersonalInfoController.to_path_helper, "data-track-click": "service-comparison-triage" %></p>
      <% end %>
    </div>
  </div>
</div>
