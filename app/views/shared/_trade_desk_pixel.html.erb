<% if Rails.application.credentials.dig(:trade_desk_pixel_id_1).present? && Rails.application.credentials.dig(:trade_desk_pixel_id_2).present? %>
  <!-- adsrver (The Trade Desk?) Pixel Code -->
  <script src="https://js.adsrvr.org/up_loader.1.1.0.js" type="text/javascript"></script>
  <script type="text/javascript">
    ttd_dom_ready( function() {
      if (typeof TTDUniversalPixelApi === 'function') {
        var universalPixelApi = new TTDUniversalPixelApi();
        universalPixelApi.init('<%=Rails.application.credentials.dig(:trade_desk_pixel_id_1)%>', ['<%=Rails.application.credentials.dig(:trade_desk_pixel_id_2)%>'], "https://insight.adsrvr.org/track/up");
      }
    });
  </script>
<% end %>