<header class="main-header sticky-header">
  <div class="toolbar">
    <div class="toolbar__left">
      <div class="toolbar__item main-header__title">
        <%= link_to home_link, class: "toolbar__logo-text main-header__logo" do %>
          <%= t("general.#{variation}") %>
        <% end %>
      </div>
      <% if variation == "gyr" %>
        <div class="toolbar__item is-mobile-hidden--inline">
          <%= link_to faq_path do %>
            <%= t("general.faq") %>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="toolbar__right">
      <% if I18n.locale != :en %>
        <%= link_to_english(class: "toolbar__item text--small") %>
      <% end %>
      <% if I18n.locale != :es %>
        <%= link_to_spanish(class: "toolbar__item text--small") %>
      <% end %>
      <% if current_client.present? %>
        <%= form_with url: destroy_client_session_path, local: true, method: :delete, class: "toolbar__item text--small text--bold" do |f| %>
          <%= f.submit value: t("general.sign_out"), class: "button--link" %>
        <% end %>
      <% else %>
        <%= link_to t("general.sign_in"), new_portal_client_login_path, class: "toolbar__item text--small text--bold" %>
        <% if !@in_intake_flow && ((variation == "gyr" && open_for_gyr_intake?) || (variation == "ctc" && open_for_ctc_intake?)) %>
          <% alt_link = content_for(:get_started_link) %>
          <% link = alt_link.present? ? alt_link : question_path(id: variation == "gyr" ? GyrQuestionNavigation.first : CtcQuestionNavigation.first) %>
          <%= link_to t("general.get_started"), link, class: "toolbar__item button button--toolbar button--small is-mobile-hidden--inline" %>
        <% end %>
    <% end %>
    </div>
  </div>
</header>
