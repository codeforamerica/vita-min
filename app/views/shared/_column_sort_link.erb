<% new_order = @sort_column == column_name && @sort_order == "asc" ? "desc" : "asc" %>
<% arrow = if @sort_column == column_name then @sort_order == "desc" ? "↑" : "↓" end %>
<%= link_to "#{title} #{arrow}", { column: column_name, order: new_order, status: @filters && (@filters[:stage] || @filters[:status]) }, id: "sort-#{column_name}"  %>