<% @main_heading = "Letâ€™s add your dependents!" %>

<% content_for :page_title, @main_heading %>


<% content_for :main do %>
  <section class="slab slab--white">
    <div class="grid">
      <div class="grid__item width-three-fourths shift-one-eighth">
        <%= yield :notices %>
        <h3 class="section-title">
          <%= image_tag("#{section_title.parameterize}.svg", alt: "") %>
          <%= section_title %>
        </h3>
        <main role="main">
          <% if @dependents.present? %>
          <ul class="dependents-list">
            <% @dependents.each do |dependent| %>
            <li class="dependent">
              <%= image_tag "dependent.svg", alt: "" %>
              <div class="dependent__details">
                <h3 class="dependent__label">
                  <%= dependent.full_name_and_birth_date %>
                </h3>
                <%= link_to edit_dependent_path(dependent) do %>
                  Edit
                <% end %>
              </div>
            </li>
            <% end %>
          </ul>
          <% end %>

          <h1 class="h2"><%= @main_heading %></h1>
          <p>We will need an ITIN or SSN for each person you add.</p>

          <%= link_to(new_dependent_path, class: "button button--wide button--icon") do %>
            Add a dependent
          <% end %>

          <%= link_to(job_count_questions_path, class: "button button--cta button--wide button--icon") do %>
            <%= image_tag("checkmark--white.svg", alt: "") %>
            Done with this step
          <% end %>
        </main>
      </div>
    </div>
  </section>
<% end %>