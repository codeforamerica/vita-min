$("#flow-wrapper").html("<%= escape_javascript(render(partial: 'flow', locals: { flow_params: @flow_params })) %>");

// re-initialize reveals -- note that this is the same as revealer.init() from honeycrisp js
$('#flow-wrapper .reveal').each(function(index, revealer) {
  var self = revealer;
  $(self).addClass('is-hiding-content');
  $(self).find('.reveal__button').click(function(e) {
    e.preventDefault();
    $(self).toggleClass('is-hiding-content');
  });
});
