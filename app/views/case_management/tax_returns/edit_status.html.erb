<% @title = t("general.take_action") %>
<% content_for :page_title, @title %>
<% content_for :card do %>
  <%= form_with model: @take_action_form,
          url: update_status_case_management_client_tax_return_path(id: @tax_return.id, client_id: @client),
          method: :post, local: true, builder: VitaMinFormBuilder,
          html: { class: "form-card" } do |f| %>
    <h1><%= @title %></h1>

    <%= f.cfa_select(
      :status,
      t("general.status"),
      grouped_status_options_for_select,
      include_blank: true,
    ) %>

    <%= f.cfa_select(
        :locale,
        t("general.language"),
        language_options,
        help_text: @take_action_form.language_difference_help_text
    ) %>

    <%= f.cfa_radio_set(
      :contact_method,
      label_text: t(".contact_method_label"),
      collection: [
        { value: "email", label: t("general.email") },
        { value: "text_message", label: t("general.text_message") }
      ],
      help_text: @take_action_form.contact_method_help_text
    ) %>

    <%= f.cfa_textarea(
            :message_body,
            t("general.send_message"),
            options: {rows: 8}
        )%>

    <%= f.cfa_textarea(
            :note_body,
            t(".note_body_label"),
            options: {rows: 8}
        )%>



    <p><%=t('.send_clarifier')%></p>
    <button class="button button--cta " type="submit">
      <%=t("general.send") %>
    </button>
  <% end %>
<% end %>