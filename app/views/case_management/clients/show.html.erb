<% content_for :page_title, "#{@client.preferred_name} ##{@client.id}" %>

<% content_for :card do %>
  <%= render "client_header" %>

  <%= render "navigation" %>
  <div class="client-profile">
    <div>Legal Name: <%= @client.legal_name || "N/A" %></div>
    <div>Preferred Name: <%= @client.preferred_name %></div>
    <h3>
      Languages
    </h3>

    <div>
      Intake Language: <%= @client.intake&.locale || "N/A" %>
    </div>

    <div>
      Phone Language: <%= @client.intake&.preferred_interview_language || "N/A" %>
    </div>

    <div>
      Filing Years: <%= @client.intake&.filing_years&.join(", ") %>
    </div>

    <div>
      Marital Status: <%= @client.intake&.marital_statuses&.join(", ") %>
    </div>

    <div>
      Filing Status: <%= @client.intake&.filing_joint_yes? ? "Filing jointly" : "Not filing jointly"  %>
    </div>

    <h3>
      Primary Contact Info
    </h3>

    <div>Email: <%= @client.email_address %></div>
    <div>Phone: <%= @client.phone_number %></div>

    <div>Phone for texting: <%= @client.sms_phone_number || 'N/A' %></div>
    <div>
      <%= @client.intake&.formatted_contact_preferences %>
    </div>

    <div>Mailing Address</div>
    <div>
      <%= @client.intake&.formatted_mailing_address %>
    </div>

    <% if @client.intake&.filing_joint_yes? %>
      <h3>Spouse Contact Info</h3>
      <div>Full Name: <%= "#{@client.intake&.spouse_first_name} #{@client.intake&.spouse_last_name}" %></div>
      <div>Email: <%= @client.intake&.spouse_email_address %> </div>
    <% end %>
  </div>
<% end %>
