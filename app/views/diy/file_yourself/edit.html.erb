<% content_for :page_title, t(".title") %>

<section class="slab slab--white question-layout">
  <div class="grid">
    <div class="grid__item question-wrapper">
      <div class="main-content-inner">
        <div class="question__illustration spacing-above-0">
          <%= image_tag("questions/person-check.svg", alt: "") %>
        </div>

        <h1 class="form-question">
          <%= content_for :page_title %>
        </h1>
        <% t(".info").each do |para| %>
          <p><%= para %> </p>
        <% end %>

        <%= form_with model: @form, url: diy_file_yourself_path, local: true, method: "put", builder: VitaMinFormBuilder, html: { class: "form-card form-card--long" } do |f| %>
          <div class="document-list">
            <ul>
              <li class="spacing-above-25">
                <div class="document-list__icon-wrapper">
                  <%= image_tag "envelope.svg", alt: "", class: "document-list__icon" %>
                </div>
                <div class="document-list__item-text">
                  <%= t(".email_us_html") %>
                </div>
              </li>

              <li class="spacing-above-25">
                <div class="document-list__icon-wrapper">
                  <%= image_tag "paper.svg", alt: "", class: "document-list__icon" %>
                </div>
                <div class="document-list__item-text">
                  <a class="open-intercom button--link"><%= t(".chat_with_us") %></a>
                </div>
              </li>
            </ul>
            &nbsp;<br>
          </div>
          <%= f.continue %>
        <% end %>
      </div>
    </div>
  </div>
</section>
