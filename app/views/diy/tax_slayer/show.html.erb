<% @main_heading = t(".title") %>
<% content_for :page_title, @main_heading %>

<main role="main">
  <section class="slab slab--white">
    <div class="grid">
      <div class="grid__item width-three-fourths shift-one-eighth">
          <div class="question__illustration spacing-above-0">
            <%= image_tag("questions/person-check.svg", alt: "") %>
          </div>

          <h1 class="form-question">
            <%= @main_heading %>
          </h1>

          <div class="text--semibold spacing-below-35">
            <ul class="checkmark-list teal">
              <% t(".steps.description").each do |item| %>
                <li>
                  <%= item %>
                </li>
              <% end %>
            </ul>
          </div>

          <%= link_to t(".continue_to_tax_slayer"), EnvironmentCredentials.dig(:tax_slayer_link), class: "button button--primary text--centered button--wide spacing-above-60", "data-track-click": "diy-cfa-taxslayer-link" %>
      </div>
    </div>
  </section>

  <section class="slab slab--teal">
    <div class="grid">
      <div class="grid__item width-three-fourths shift-one-eighth">
        <p>
          <strong>
            <%= t(".phone_support.note") %>
          </strong>
        </p>
        <p>
          <%= t(".phone_support.contact_html") %>
        </p>
      </div>
    </div>
  </section>
</main>
