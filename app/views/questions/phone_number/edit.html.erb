<% @main_question = "Please share your contact number." %>

<% content_for :page_title, @main_question %>

<% content_for :form_card do %>
  <%= form_with model: @form, url: current_path, local: true, method: "put", builder: VitaMinFormBuilder, html: { class: "form-card form-card--long" } do |f| %>
    <h1 class="h2"><%= @main_question %></h1>
    <p class="text--help">
      Once you've answered all the tax questions, your tax preparer will call to review your tax situation.
    </p>

    <div class="form-card__content">
      <%= f.cfa_input_field(:phone_number, "Phone number", classes: ["form-width--long"]) %>
      <%= f.cfa_input_field(:phone_number_confirmation, "Confirm phone number", classes: ["form-width--long"]) %>
      <%= f.cfa_checkbox(:phone_number_can_receive_texts, "This number can receive text messages", options: { checked_value: "yes", unchecked_value: "no" }) %>
    </div>

    <button class="button button--primary" type="submit">
      Continue
    </button>
  <% end %>
<% end %>
