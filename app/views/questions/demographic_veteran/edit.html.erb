<% @main_question = t("views.questions.demographic_veteran.title") %>

<% content_for :page_title, @main_question %>

<% content_for :card do %>
  <%= form_with model: @form, url: current_path, local: true, method: "put", builder: VitaMinFormBuilder, html: { class: "form-card" } do |f| %>
    <%= f.cfa_radio_set(
            :demographic_veteran,
            label_text: "<h1 class=\"form-question\">#{@main_question}</h1>".html_safe,
            collection: [
                { value: :yes, label: t("general.affirmative") },
                { value: :no, label: t("general.negative") },
            ]
        )
    %>
    <%= f.continue %>
    <%= f.button :submit, name: "#{f.object_name}[demographic_veteran]", value: :prefer_not_to_answer, class: "button button--wide" do %>
      <%=t("general.skip_question") %>
    <% end %>
  <% end %>
<% end %>
