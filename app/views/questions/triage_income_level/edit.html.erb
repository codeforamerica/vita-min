<% content_for :page_title, t('.title') %>

<% content_for :main do %>
  <section class="slab slab--white welcome">
    <div class="grid">
      <div class="grid__item width-three-fourths shift-one-eighth">
        <main role="main">
          <div class="question__illustration">
            <%= image_tag illustration_path %>
          </div>

          <h1 class="form-question text--line-breaks">
            <%= content_for(:page_title) %>
          </h1>

          <p><%= t('.help_text') %></p>

          <%= form_with model: @form, url: current_path, local: true, method: "put", builder: VitaMinFormBuilder, html: { class: "form-card form-card--long" } do |f| %>
            <%= f.cfa_radio_set(
                :income_level,
                label_text: t('.levels_label'),
                collection: [
                  { value: :zero, label: t(".levels.zero") },
                  { value: :hh_1_to_25100, label: t(".levels.hh_1_to_25100_html") },
                  { value: :hh_25101_to_66000, label: t(".levels.hh_25100_to_66000") },
                  { value: :hh_66000_to_73000, label: t(".levels.hh_66000_to_73000") },
                  { value: :hh_over_73000, label: t(".levels.hh_over_73000") }
                ]
              )
            %>

            <div class="spacing-above-60">
              <%= f.submit t("general.continue"), class: "button button--primary button--wide text--centered" %>
            </div>
          <% end %>
        </main>
      </div>
    </div>
  </section>
<% end %>
