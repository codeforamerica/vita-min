<% @main_question = "What is your ethnicity?" %>

<% content_for :page_title, @main_question %>

<% content_for :form_card do %>
  <%= form_with model: @form, url: current_path, local: true, method: "put", builder: VitaMinFormBuilder, html: { class: "form-card" } do |f| %>
    <%= f.cfa_radio_set(
          :demographic_primary_ethnicity,
          label_text: "<h1 class=\"form-question\">#{@main_question}</h1>".html_safe,
          collection: [
            { value: :hispanic_latino, label: "Hispanic or Latino" },
            { value: :not_hispanic_latino, label: "Not Hispanic or Latino" },
          ]
        )
    %>
    <button class="button button--primary button--wide" type="submit">
      Continue
    </button>
    <%= f.button :submit, name: "#{f.object_name}[demographic_primary_ethnicity]", value: :prefer_not_to_answer, class: "button button--wide" do %>
      Skip question
    <% end %>
  <% end %>
<% end %>