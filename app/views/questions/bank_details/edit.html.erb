<% content_for :page_title, "Great, please provide your bank details below!" %>

<% content_for :form_card do %>
  <%= form_with model: @form, url: current_path, local: true, method: "put", builder: VitaMinFormBuilder, html: { class: "form-card form-card--long" } do |f| %>
    <h1 class="h2"><%= content_for(:page_title) %></h1>

    <div class="form-card__content">
      <div class="with-padding-large">
        <%= f.cfa_input_field(:bank_name, "Bank name", classes: ["form-width--long"]) %>
        <%= f.cfa_input_field(:bank_routing_number, "Routing number", classes: ["form-width--long"], type: :password) %>
        <%= f.cfa_input_field(:bank_account_number, "Account number", classes: ["form-width--long"], type: :password) %>
      </div>
      <%= f.cfa_radio_set(
              :bank_account_type,
              label_text: "<h1 class=\"form-question\">What type of account is this?</h1>".html_safe,
              collection: [
                  { value: :checking, label: "Checking" },
                  { value: :savings, label: "Savings" },
              ]
          )
      %>
    </div>


    <button class="button button--primary" type="submit">
      Continue
    </button>
  <% end %>
<% end %>
