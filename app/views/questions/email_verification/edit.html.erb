<% @main_question = t("views.questions.verification.title") %>

<% content_for :page_title, @main_question %>

<% content_for :form_card do %>
  <%= form_with model: @form, url: current_path, local: true, method: "put", builder: VitaMinFormBuilder, html: { class: "form-card form-card--long" } do |f| %>
    <h1 class="h2"><%= @main_question %></h1>
    <p>
      <%= t("views.questions.verification.body") %> <strong><%= current_intake.email_address %></strong>
    </p>

    <div class="form-card__content">
      <%= f.cfa_input_field(:verification_code, t("views.questions.verification.verification_code_label"), classes: ["form-width--long"]) %>
    </div>

    <%= f.continue t("views.questions.verification.verify") %>
  <% end %>
<% end %>
