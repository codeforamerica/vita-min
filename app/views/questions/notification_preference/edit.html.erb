<% content_for :page_title, "How may we contact you about your taxes?" %>

<% content_for :form_card do %>
  <%= form_with model: @form, url: current_path, local: true, method: "put", builder: VitaMinFormBuilder, html: { class: "form-card" } do |f| %>
    <h2>How may we contact you about your taxes?</h2>

    <p>We will need to contact you with some updates on the status of your form or if any questions arise. We will not share your information with any outside parties.</p>

    <p>
      <strong>Email:</strong>
      <br>
      <%= current_user.email %>
    </p>

    <p>
      <strong>Phone Number:</strong>
      <br>
      <%= current_user.phone_number %>
    </p>

    <div class="form-card__stacked-checkboxes">
      <%= f.cfa_checkbox(:email_notification_opt_in, "Email Notifications", options: { checked_value: "yes", unchecked_value: "no" }) %>
      <%= f.cfa_checkbox(:sms_notification_opt_in, "SMS Notifications", options: { checked_value: "yes", unchecked_value: "no" }) %>
    </div>

    <button class="button button--primary" type="submit">
      Continue
    </button>
  <% end %>
<% end %>
