<% content_for :page_title, t("views.questions.file_with_help.title") %>

<% content_for :form_card do %>
  <div class="form-card">
    <h1 class="form-question">
      <%= content_for(:page_title) %>
    </h1>

    <p>
      <%=t("views.questions.file_with_help.info") %>
    </p>

    <p>
      <strong><%=t("views.questions.file_with_help.right_option.header") %></strong>
    </p>

    <ul class="checkmark-list">
      <li>
        <%= render "shared/svg/checkmark", fill_class: "teal" %>
        <span><%=t("views.questions.file_with_help.right_option.need_assistance") %></span>
      </li>
      <li>
        <%= render "shared/svg/checkmark", fill_class: "teal" %>
        <span><%=t("views.questions.file_with_help.right_option.confused") %></span>
      </li>
      <li>
        <%= render "shared/svg/checkmark", fill_class: "teal" %>
        <span><%=t("views.questions.file_with_help.right_option.nervous") %></span>
      </li>
    </ul>

    <div class="notice--warning">
      <p><%= t("views.questions.file_with_help.two_to_three_weeks_html") %></p>
      <p><%= t("views.questions.file_with_help.diy_option_html", diy_path: diy_file_yourself_path) %></p>
    </div>

    <%= link_to next_path, class: "button button--primary text--centered button--wide spacing-above-60" do %>
      <%=t("general.continue") %>
    <% end %>
  </div>
<% end %>
