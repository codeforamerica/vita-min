<% content_for :page_title, "Mailing Address" %>

<% content_for :form_card do %>
  <%= form_with model: @form, url: current_path, local: true, method: "put", builder: VitaMinFormBuilder, html: { class: "form-card form-card--long" } do |f| %>
    <h2>Welcome <%= current_user.first_name %>! We'll send your final tax return to this address:</h2>

    <div class="form-card__content">
      <%= f.cfa_input_field(:street_address, "Mailing Address") %>
      <%= f.cfa_input_field(:city, "City") %>
      <%= f.cfa_select(:state, "State", States.name_value_pairs) %>
      <%= f.cfa_input_field(:zip_code, "ZIP Code") %>
    </div>

    <button class="button button--primary" type="submit">
      Confirm
    </button>
  <% end %>
<% end %>
