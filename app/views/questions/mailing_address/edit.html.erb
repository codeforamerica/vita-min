<% @main_question = "What is your mailing address?" %>

<% content_for :page_title, @main_question %>

<% content_for :form_card do %>
  <%= form_with model: @form, url: current_path, local: true, method: "put", builder: VitaMinFormBuilder, html: { class: "form-card form-card--long" } do |f| %>
    <h1 class="h2"><%= @main_question %></h1>

    <div class="form-card__content">
      <%= f.cfa_input_field(:street_address, "Street address", classes: ["form-width--long"]) %>
      <%= f.cfa_input_field(:city, "City", classes: ["form-width--long"]) %>
      <%= f.cfa_select(:state, "State", States.name_value_pairs) %>
      <%= f.cfa_input_field(:zip_code, "ZIP code", classes: ["form-width--zip"]) %>
    </div>

    <button class="button button--primary" type="submit">
      Confirm
    </button>
  <% end %>
<% end %>
