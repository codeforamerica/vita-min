<% @main_question = "Please share your spouse's e-mail address." %>

<% content_for :page_title, @main_question %>

<% content_for :form_card do %>
  <%= form_with model: @form, url: current_path, local: true, method: "put", builder: VitaMinFormBuilder, html: { class: "form-card form-card--long" } do |f| %>
    <h1 class="h2"><%= @main_question %></h1>
    <p class="text--help">
      An e-mail is required for the final signature on your tax return.
    </p>

    <div class="form-card__content">
      <%= f.cfa_input_field(:spouse_email_address, "E-mail address", classes: ["form-width--long"]) %>
      <%= f.cfa_input_field(:spouse_email_address_confirmation, "Confirm e-mail address", classes: ["form-width--long"]) %>
    </div>

    <button class="button button--primary" type="submit">
      Continue
    </button>
  <% end %>
<% end %>