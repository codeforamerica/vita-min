<% content_for :page_title, t("questions.start_with_current_year.title") %>

<% content_for :form_card do %>
  <div class="form-card">
    <h1 class="form-question">
      <%= content_for(:page_title) %>
    </h1>

    <p>
      <%=t("questions.start_with_current_year.info", :year => current_intake.most_recent_filing_year) %>
    </p>

    <p class="spacing-below-35">
      <%=t("questions.start_with_current_year.starting_point") %>
    </p>

    <%= link_to next_path, class: "button button--primary text--centered" do %>
      <%=t("general.continue") %>
    <% end %>
  </div>
<% end %>
