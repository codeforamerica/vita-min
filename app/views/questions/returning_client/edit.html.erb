<% @main_heading = t("views.questions.returning_client.title") %>
<% content_for :page_title, @main_heading %>

<main role="main">
  <section class="slab slab--white">
    <div class="grid">
      <div class="grid__item width-three-fourths shift-one-eighth">
        <main role="main">
          <div class="question__illustration spacing-above-0">
            <%= image_tag("returning-client.svg", alt: "") %>
          </div>

          <h1 class="form-question">
            <%= @main_heading %>
          </h1>
          <p>
            <%=t("views.questions.returning_client.next_steps_html", :email_link => mail_to("hello@getyourrefund.org")) %>
          <p>

          <%= link_to root_path, class: "button button--primary text--centered button--wide spacing-above-60" do %>
              <%=t("general.return_home") %>
          <% end %>
        </main>
      </div>
    </div>
  </section>
</main>
