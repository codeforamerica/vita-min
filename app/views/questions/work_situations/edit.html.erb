<% content_for :page_title, t('views.questions.work_situations.title', :year => current_intake.most_recent_filing_year, :count => current_intake.filer_count) %>

<% content_for :form_card do %>
  <%= form_with model: @form, url: current_path, local: true, method: "put", builder: VitaMinFormBuilder, html: { class: "form-card" } do |f| %>
    <h1 class="form-question spacing-below-35">
      <%= content_for(:page_title) %>
    </h1>
    <p>
      <%=t('views.questions.work_situations.help_text') %>
    </p>
    <div class="form-card__stacked-checkboxes spacing-above-0">
      <%= f.cfa_checkbox(:had_wages, t('views.questions.work_situations.options.had_wages_html', :count => current_intake.filer_count), options: { checked_value: "yes", unchecked_value: "no" }) %>
      <%= f.cfa_checkbox(:had_self_employment_income, t('views.questions.work_situations.options.had_self_employment_income_html', :count => current_intake.filer_count), options: { checked_value: "yes", unchecked_value: "no" }) %>
      <%= f.cfa_checkbox(:had_unemployment_income, t('views.questions.work_situations.options.had_unemployment_income_html', :count => current_intake.filer_count), options: { checked_value: "yes", unchecked_value: "no" }) %>
      <%= f.cfa_checkbox(:had_tips, t('views.questions.work_situations.options.had_tips', :count => current_intake.filer_count), options: { checked_value: "yes", unchecked_value: "no" }) %>
      <%= f.cfa_checkbox(:no_work_situations_apply, t("general.none_of_the_above"), options: { id: "none__checkbox", checked_value: "yes", unchecked_value: "no" }) %>
    </div>

    <button class="button button--primary button--wide" type="submit">
      <%=t("general.continue") %>
    </button>
  <% end %>
<% end %>