<% content_for :page_title, t('views.questions.health_insurance.title.one', :year => current_intake.most_recent_filing_year, :count => current_intake.filer_count) %>

<% content_for :card do %>
  <%= form_with model: @form, url: current_path, local: true, method: "put", builder: VitaMinFormBuilder, html: { class: "form-card" } do |f| %>
    <h1 class="form-question spacing-below-35">
      <%= content_for(:page_title) %>
    </h1>
    <p>
      <%=t('views.questions.work_situations.help_text') %>
    </p>
    <div class="form-card__stacked-checkboxes spacing-above-0">
      <%= f.cfa_checkbox(:had_wages, t('views.questions.health_insurance.options.marketplace_hi_html', :count => current_intake.filer_count), options: { checked_value: "yes", unchecked_value: "no" }) %>
      <%= f.cfa_checkbox(:had_self_employment_income, t('views.questions.health_insurance.options.employer_hi_html', :count => current_intake.filer_count), options: { checked_value: "yes", unchecked_value: "no" }) %>
      <%= f.cfa_checkbox(:had_unemployment_income, t('views.questions.health_insurance.options.medicaid_medicare_html', :count => current_intake.filer_count), options: { checked_value: "yes", unchecked_value: "no" }) %>
      <%= f.cfa_checkbox(:had_tips, t('views.questions.health_insurance.options.hsa_html', :count => current_intake.filer_count), options: { checked_value: "yes", unchecked_value: "no" }) %>
      <%= f.cfa_checkbox(:no_work_situations_apply, t("views.questions.health_insurance.options.no_hi_html"), options: { id: "none__checkbox", checked_value: "yes", unchecked_value: "no" }) %>
    </div>

    <%= f.continue %>
  <% end %>
<% end %>
