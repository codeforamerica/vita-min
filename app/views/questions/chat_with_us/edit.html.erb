<% content_for :body_class, "partner-page" %>

<% content_for :page_title, t("views.questions.chat_with_us.title", :partner_name => current_intake.vita_partner&.display_name) %>

<% content_for :form_card do %>
  <div class="form-card">
    <h1 class="form-question">
      <%= content_for(:page_title) %>
    </h1>

    <p>
      <%=t("views.questions.chat_with_us.info") %>
    </p>

    <p>
      <%=t("views.questions.chat_with_us.chat") %>
    </p>

    <%= link_to next_path, class: "button button--primary text--centered" do %>
      <%=t("general.continue") %>
    <% end %>
  </div>
<% end %>
