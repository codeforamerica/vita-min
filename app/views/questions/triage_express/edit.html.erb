<% content_for :page_title, t('questions.triage_ctc.edit.title') %>
<% content_for :card do %>
  <h1 class="form-question">
    <%= content_for(:page_title) %>
  </h1>

  <p><i><%= t('questions.triage_ctc.edit.comparison.ctc.timeframe') %></i></p>
  <p><%= t('questions.triage_ctc.edit.comparison.ctc.description') %></p>
  <div><%= t('questions.triage_ctc.edit.collect_your') %></div>
  <ul class="list--bulleted">
    <li><%= t('questions.triage_ctc.edit.collectables.missing_stimulus') %></li>
    <li><%= t('questions.triage_ctc.edit.collectables.ctc') %></li>
  </ul>

  <div>
    <%= link_to t("questions.triage_ctc.edit.sign_up_for_ctc"),
                root_with_source_url(host: MultiTenantService.new(:ctc).host, source: "gyrtriage"),
                class: "button button--primary button--wide spacing-above-60 text--centered",
                "data-track-click": "triage-express-only-choose-express-signup"
        # Click tracking uses Feb 2022 'express' name; see TriageGyrExpressController for history.
    %>
  </div>
<% end %>
