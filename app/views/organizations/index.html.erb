<% content_for :page_title, "All organizations" %>

<% content_for :main do %>
  <section class="slab slab--white">
    <div class="grid">
      <div class="grid__item width-three-fourths shift-one-eighth">
        <%= yield :notices %>
        <main role="main">
          <% if @organizations.present? %>
          <ul class="organizations-list">
            <% @organizations.each do |organization| %>
            <li class="organization">
              <div class="organization__details">
                <h3 class="organization__label">
                  <%= organization.name %>
                </h3>
                <%= link_to t("general.edit"), edit_organization_path(organization), class: "button button--inline-action" %>
              </div>
            </li>
            <% end %>
          </ul>
          <% end %>

          <h1 class="h2">All organizations</h1>
          <%= link_to(new_organization_path, class: "button button--wide button--icon") do %>
            Add an organization
          <% end %>
        </main>
      </div>
    </div>
  </section>
<% end %>
