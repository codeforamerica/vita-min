<div role="alert">
  <h2 class="sr-only"><%= t("hub.bank_accounts.info_displayed") %></h2>

  <% if @client.intake.is_ctc? %>
    <p>
      <span class="hc-label">Refund delivery method:</span>
      <span class="label-value"><%= @client.intake.ctc_refund_delivery_method.humanize %> </span>
    </p>
  <% end %>

  <p>
    <span class="hc-label"><%= t("hub.bank_accounts.bank_name") %>:</span>
    <span class="label-value"><%= @client.intake.bank_name %> </span>
  </p>
  <p>
    <span class="hc-label"><%= t("hub.bank_accounts.account_type") %>:</span>
    <span class="label-value"><%= @client.intake.bank_account_type == "unfilled" ? t("general.NA") : t("hub.bank_accounts.#{@client.intake.bank_account_type}") %> </span>
  </p>
  <p>
    <span class="hc-label"><%= t("hub.bank_accounts.account_number") %>:</span>
    <span class="label-value"><%= @client.intake.bank_account_number %> </span>
  </p>
  <p>
    <span class="hc-label"><%= t("hub.bank_accounts.routing_number") %>:</span>
    <span class="label-value"><%= @client.intake.bank_routing_number %> </span>
  </p>
</div>