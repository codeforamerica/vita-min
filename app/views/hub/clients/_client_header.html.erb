<div class="client-header">
  <div>
    <div class="attention-indicator-wrapper">
      <h1 class="h2">
        <%= @client.preferred_name %>
      </h1>
      <%= render "shared/client_needs_attention", client: @client %>
    </div>
    <div class="client-header__organization">
      <h2 class="h3"><%= @client.vita_partner&.name %></h2>
      <div><%= link_to "Edit", edit_organization_hub_client_path(id: @client.id), class: "button button--inline-action" if current_user.is_admin? %></div>
    </div>
    <h2 class="h4">Client Id: #<%= @client.id %></h2>
    <%= form_for [:hub, @client], method: :patch, url: attention_needed_hub_client_path(id: @client.id) do |f| %>
      <%= f.hidden_field :action, value: @client.needs_attention? ? "clear" : "set" %>
      <%= f.submit @client.needs_attention? ? t("general.resolve") : t("general.mark_for_attention"), class: "button button--small" %>
    <% end %>
  </div>
  <div>
    <%= render "shared/tax_return_list", client: @client, status_updateable: true %>
  </div>
</div>