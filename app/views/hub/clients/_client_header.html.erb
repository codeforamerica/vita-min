<div class="hub-section client-header">
  <div>
    <div class="attention-indicator-wrapper">
      <h1 class="h1">
        <%= @client.preferred_name %>
      </h1>
      <%= render "shared/client_needs_attention", client: @client %>

      <div class="text--help">#<%= @client.id %></div>
    </div>

    <div class="client-header__organization">
      <h2><%= @client.vita_partner&.name || t("general.unassigned") %></h2>
      <%= link_to "Edit", edit_organization_hub_client_path(id: @client.id), class: "button button--subtle button--tiny" if current_user.role_type == "AdminRole" %>
    </div>

    <div class="text--help spacing-above-5 spacing-below-25">Last client update: <%= @client.updated_at.strftime('%b %d %l:%M %p') %></div>

    <%= form_for [:hub, @client], method: :patch, url: attention_needed_hub_client_path(id: @client.id) do |f| %>
      <%= f.hidden_field :action, value: @client.needs_attention? ? "clear" : "set" %>
      <%= f.submit @client.needs_attention? ? t("general.resolve") : t("general.mark_for_attention"), class: "button button--small button--subtle" %>
    <% end %>
  </div>

  <div>
    <%= render "shared/tax_return_list", client: @client, status_updateable: true %>
  </div>
</div>