<% @title = "Edit #{@faq_category.name_en}" %>
<% content_for :page_title, @title %>
<% content_for :card do %>
  <div class="slab slab--not-padded spacing-above-25">
    <% titles = [["Frequently Asked Questions", send(@faq_return_path)], "#{@faq_category.name_en} (##{@faq_category.id})"] %>
    <%= render 'header', titles: titles %>
    <%= render 'header_buttons', category: @faq_category %>
    <hr/>
    <%= form_with model: @form, url: { product_type: @faq_category.product_type, action: :update }, local: true, method: :put, builder: VitaMinFormBuilder do |f| %>
      <%= render 'hub/faq_categories/faq_category_form', f: f, cancel_path: hub_faq_category_path(id: @faq_category.id), edit_form: true, product_type: @faq_category.product_type %>
    <% end %>
  </div>
<% end %>
