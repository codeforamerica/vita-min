<% content_for :card do %>
  <div class="slab slab--not-padded spacing-above-25">
    <h1 class="h2">SLA Breaches</h1>
    <div style="display: flex" class="spacing-below-25">
      <div style="margin:0; margin-right: 20px">
        <strong>Report run at:<br/></strong>
        <%= @attention_needed.current_as_of.strftime("%a %m/%d/%Y") %> at <%= formatted_time(@attention_needed.breach_threshold_date) %>
      </div>
      <div style="margin:0">
        <strong>Breach threshold:<br/></strong>
        <%= @attention_needed.breach_threshold_date.strftime("%a %m/%d/%Y") %> at <%= formatted_time(@attention_needed.breach_threshold_date) %>
      </div>
    </div>
  </div>

  <div>
    <table class="index-table">
      <thead class="index-table__head">
        <tr class="index-table__row">
          <th scope="col" class="index-table__header">Organization Name</th>
          <th scope="col" class="index-table__header">Needs attention breaches*</th>
        </tr>
      </thead>
      <tbody class="index-table__body">
      <% @vita_partners.each do |vita_partner| %>
        <% next unless vita_partner.organization? %>
        <tr class="index-table__row">
          <td class="index-table__cell"><%= vita_partner.name %> </td>
          <td class="index-table__cell"><%= @attention_needed.breach_counts[vita_partner.id] || 0%></td>
        </tr>
        <% vita_partner.child_sites.each do |site| %>
          <tr class="index-table__row">
            <td class="index-table__cell" style="padding-left: 60px"><%= site.name %> </td>
            <td class="index-table__cell"><%= @attention_needed.breach_counts[site.id] || 0%></td>
          </tr>
        <% end %>
      <% end %>
      <tr>
        <td></td>
        <td class="index-table__cell"><strong><%= @attention_needed.total_breaches %></strong></td>

      </tr>
      </tbody>
    </table>
  </div>

  <div class="slab slab--not-padded spacing-above-25">
    <div style="text-align: right">
      <small>Reports update approx. every 10 mins.</small>
    </div>
    <div style="text-align: right">
      <small>Client needs attention indicator has been on for more than 3 business days.*</small>
    </div>
  </div>
<% end %>