<%= render 'hub/faq_categories/header', titles: [["Efile Errors", hub_state_file_efile_errors_path], @efile_error.code]  %>
<div class="grid-flex">
  <div class="item">
    <h4 class="spacing-below-5">Source</h4>
    <div><%= @efile_error.source || "none" %></div>
  </div>

  <% if @efile_error.source == "irs" %>
    <div class="item">
      <h4 class="spacing-below-5">Severity</h4>
      <div><%= @efile_error.severity %></div>
    </div>
    <div class="item">
      <h4 class="spacing-below-5">Category</h4>
      <div><%= @efile_error.category %></div>
    </div>
  <% end %>
  <div class="item">
    <h4 class="spacing-below-5">Service type:</h4>
    <p>
      <%= @efile_error.service_type %>
    </p>
  </div>

  <div class="item">
    <h4 class="spacing-below-5">First seen at</h4>
    <p><%= @efile_error.created_at.strftime("%-m/%-d/%Y %-I:%M%P %Z").strip %></p>
  </div>
</div>
<h4 class="spacing-below-5">Raw error message</h4>
<p><%= @efile_error.message %></p>