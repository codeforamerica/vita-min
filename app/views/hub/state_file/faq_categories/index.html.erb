<% @title = "Frequently Asked Questions" %>
<% content_for :page_title, @title %>
<% content_for :card do %>
  <div class="slab slab--not-padded spacing-above-25">
    <%= render 'hub/faq_categories/header', titles: [@title]%>
    <%= link_to "Add new FAQ Category", new_hub_faq_category_path(product_type: "state_file_az"), method: :get, class: "button spacing-below-0" %>
    <hr/>
    <h2>Arizona</h2>
    <% @az_faq_categories.each do |category| %>
      <%= render 'faq_categories_and_items', category: category %>
    <% end %>

    <% @ny_faq_categories.each do |category| %>
      <%= render 'faq_categories_and_items', category: category %>
    <% end %>
  </div>
<% end %>

