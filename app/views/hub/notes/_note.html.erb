<div class="note <%= "system_note" unless note.is_a? Note %>" id="<%= "last-item" if local_assigns[:is_last_item] %>">
  <div class="note__heading">
    <div class="note__author">
      <%= note&.user&.name unless note.is_a? SystemNote %>
    </div>
    <div class="note__time">
      <%= timestamp(note.created_at) %>
    </div>
  </div>

  <div class="note__body">
    <% if note.is_a? SystemNote::DocumentHelp %>
      <%= render "system_notes/document_help", note: note %>
    <% else %>
      <%= format_text(note.body) %>
    <% end %>
  </div>
</div>
