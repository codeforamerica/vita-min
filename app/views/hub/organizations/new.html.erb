<% @title = t(".title") %>
<% content_for :page_title, @title %>
<% content_for :card do %>
  <div class="slab slab--padded">
    <%= form_with model: @organization_form, url: hub_organizations_path, method: :post, local: true, builder: VitaMinFormBuilder do |f| %>
      <h1 class="form-card__title">
        <%= @title %>
      </h1>

      <%= render "hub/organizations/organization_form", f: f, additional_options: { checked: "checked" } %>

    <% end %>
  </div>
<% end %>

<% content_for :script do %>
  <script>
      window.taggableItems = <%= taggable_states(States.keys) %>;
  </script>
<% end %>
