<div id="stateless">
  <div class="grid-flex space-between spacing-below-0" style="border-bottom: 1px solid black;">
    <div class="text--semibold text--small spacing-below-0">
      <%= t("hub.organizations.index.no_state") %>
    </div>
  </div>

  <ul class="no-bullets">
    <% if current_user.org_lead? %>
      <% if @presenter.orgs_with_unrouted_coalitions.any? %>
        <% @presenter.orgs_with_unrouted_coalitions.each do |org| %>
          <%= render "organization", organization: org %>
        <% end %>
      <% end %>
    <% end %>

    <% if @presenter.unrouted_independent_organizations.any? %>
      <% @presenter.unrouted_independent_organizations.each do |org| %>
        <%= render "organization", organization: org %>
      <% end %>
    <% end %>

    <% if @presenter.unrouted_coalitions.any? %>
      <% @presenter.unrouted_coalitions.each do |coalition| %>
        <%= render "coalition", coalition: coalition %>
      <% end %>
    <% end %>
  </ul>

  <% if @presenter.orgs_with_unrouted_coalitions.empty? && @presenter.unrouted_coalitions.empty? %>
    <%= t("general.NA") %>
  <% end %>
</div>