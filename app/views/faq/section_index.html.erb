<% content_for :page_title, t("views.public_pages.faq.title") %>
<% content_for :body_class, "faq" %>

<%= render 'shared/breadcrumb_array', items: [
  [t('general.home'), root_path],
  ["FAQ", faq_path],
  @faq_category.name(I18n.locale),
] %>

<div class="main-content-inner">
  <section class="slab slab--white">

    <div class="grid">
      <div class="grid__item width-one-whole faq-wrapper">
        <h1 class="h2"><%= @faq_category.name(I18n.locale) %></h1>

        <% if @faq_category.description_en || @faq_category.description_es %>
          <p><%= @faq_category.description(I18n.locale) %></p>
        <% end %>
        <% @faq_items.each do |faq_item| %>
          <p>
            <%= link_to faq_item.question(I18n.locale),
            faq_question_path(section_key: @section_key, question_key: faq_item.slug) %>
          </p>
        <% end %>
      </div>
    </div>
  </section>
</div>
