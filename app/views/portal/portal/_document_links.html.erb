<% if documents.present? %>
  <% if documents.count == 1 %>
    <%= render "document_link", url: portal_document_path(id: documents.first.id), text: label %>
  <% else %>
    <% documents.each do |document| %>
      <%= render "document_link", url: portal_document_path(id: document.id), text: t("portal.portal.home.document_link.view_document", display_name: document.display_name) %>
    <% end %>
  <% end %>
<% end %>
