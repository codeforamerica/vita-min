<% content_for :page_title, "All right, let's collect your documents!" %>

<% content_for :main do %>
  <section class="slab slab--white">
    <div class="grid">
      <div class="grid__item width-three-fourths shift-one-eighth">
        <main role="main">
          <h1 class="form-question">
            <%= content_for(:page_title) %>
          </h1>
          <p class="text--help">
            Based on your answers to our earlier questions, we have a list of documents you should share. Your progress will be saved and you can return with more documents later.
          </p>
          <p class="text--help">
            <strong>
              Your files are secure and the information you provide will be handled in accordance with our <%= link_to privacy_path, target: "_blank" do %>privacy policy<% end %>.
            </strong>
          </p>

          <div class="document-overview-list">
            <% if any_must_have_docs?(recommended_document_types) %>
              <p>
                <strong>You should have:</strong>
              </p>
              <% recommended_document_types.each do |type| %>
                <% if must_have?(type) %>
                  <div class="document-overview-list__item">
                    <%= image_tag "paper.svg", alt: "", class: "document-overview-list__icon" %><h2 class="h3 document-overview-list__heading">
                      <%= type %>
                    </h2>
                  </div>
                <% end %>
              <% end %>
            <% end %>
          </div>

          <div class="document-overview-list">
            <% if any_might_have_docs?(recommended_document_types) %>
              <p>
                <strong>You might also have:</strong>
              </p>
              <% recommended_document_types.each do |type| %>
                <% if might_have?(type) %>
                  <div class="document-overview-list__item">
                    <%= image_tag "paper.svg", alt: "", class: "document-overview-list__icon" %><h2 class="h3 document-overview-list__heading">
                      <%= type %>
                    </h2>
                  </div>
                <% end %>
              <% end %>
            <% end %>
          </div>

          <%= link_to next_path, class: "button button--primary" do %>
            Continue
          <% end %>
        </main>
      </div>
    </div>
  </section>
<% end %>
