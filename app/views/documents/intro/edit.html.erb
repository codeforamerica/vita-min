<% content_for :form_question, t("views.documents.intro.title") %>

<% content_for :card do %>
  <h1 class="form-question">
    <%= content_for(:form_question) %>
  </h1>
  <p>
    <%= t("views.documents.intro.info") %>
  </p>

  <div class="document-list spacing-below-60">
    <% if current_intake.document_types_definitely_needed.present? %>
      <h2 class="h3">
        <strong><%= t("views.documents.intro.should_have") %></strong>
      </h2>
      <ul>
        <% current_intake.document_types_definitely_needed.each do |type| %>
          <li class="spacing-above-25">
            <div class="document-list__icon-wrapper">
              <%= image_tag "paper.svg", alt: "", class: "document-list__icon" %>
            </div>
            <h3 class="document-list__item-text">
              <%= type.label %>
            </h3>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>

  <p class="text--small">
    <%= t("views.documents.intro.note") %>
  </p>

  <%= link_to next_path, class: "button button--primary button--wide text--centered spacing-above-60" do %>
    <%=t("general.continue") %>
  <% end %>
<% end %>
