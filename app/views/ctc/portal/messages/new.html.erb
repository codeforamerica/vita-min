<% content_for :title, t("views.ctc.portal.messages.new.title") %>

<%= content_for :card do %>
  <div class="question-layout">
    <div class="back">
      <%= link_to t("general.back"), :back %>
    </div>
    <div class="question-wrapper">
      <h1 class="h2"><%= content_for :title %></h1>
      <p><%= client_contact_preference(current_client) %> <%= t("views.ctc.portal.messages.new.wait_time") %></p>
      <%= form_with model: @message, url: portal_messages_path, local: true, builder: VitaMinFormBuilder, class: "portal-message-form" do |f| %>
        <%= f.cfa_textarea(:body, t("views.ctc.portal.messages.new.body_label")) %>
        <div>
          <%= f.submit t("general.send_message"), class: "button button--primary button--wide" %>
        </div>
      <% end %>
    </div>
  </div>

<% end %>