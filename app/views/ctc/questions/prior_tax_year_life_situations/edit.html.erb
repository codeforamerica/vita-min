<% @main_question = t("views.ctc.questions.prior_tax_year_life_situations.title") %>

<% content_for :page_title, @main_question %>

<% content_for :form_card do %>
  <h1 class="h2"><%= @main_question %></h1>

  <p>
    <%= t("views.ctc.questions.prior_tax_year_life_situations.p1") %>
  </p>
  <ul class="checkmark-list teal">
    <%= t("views.ctc.questions.prior_tax_year_life_situations.items", prior_tax_year: prior_tax_year).each do |item| %>
      <li><%= item %></li>
    <% end %>
  </ul>
  <p>
    <%= t("views.ctc.questions.prior_tax_year_life_situations.p2") %>
  </p>

  <%= link_to t("general.continue"), next_path, class: "button button--primary button--wide text--centered spacing-above-60" %>
  <%= link_to t("views.ctc.questions.prior_tax_year_life_situations.visit_ctc_faq"), root_path(anchor: 'ctc_faq'), class: "button button--wide text--centered" %>
  <%= link_to url_for(host: MultiTenantService.new(:gyr).host, controller: "/public_pages", action: 'stimulus'), class: "button button--wide text--centered" do %>
    <%=t("views.ctc.questions.prior_tax_year_life_situations.visit_stimulus_faq") %>
  <% end %>
<% end %>
