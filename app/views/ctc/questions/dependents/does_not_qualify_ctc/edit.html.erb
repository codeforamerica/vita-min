<% @puerto_rico_filing = current_intake.puerto_rico_filing? %>
<% @main_question = t(@puerto_rico_filing ? "views.ctc.questions.dependents.does_not_qualify_ctc.pr.title" : "views.ctc.questions.dependents.does_not_qualify_ctc.title", name:  @dependent.first_name.upcase_first) %>

<% content_for :page_title, @main_question %>

<% content_for :form_card do %>
  <h1 class="h2"><%= @main_question %></h1>

    <p><%= t(@puerto_rico_filing ? "views.ctc.questions.dependents.does_not_qualify_ctc.pr.help_text" : "views.ctc.questions.dependents.does_not_qualify_ctc.help_text", name:  @dependent.first_name.upcase_first) %></p>
    <%= render('components/molecules/reveal', title: t("views.ctc.questions.dependents.does_not_qualify_ctc.reveal")) do %>
      <ul class="list--bulleted">
        <% t(@puerto_rico_filing ? "views.ctc.questions.dependents.does_not_qualify_ctc.pr.conditions" : "views.ctc.questions.dependents.does_not_qualify_ctc.conditions", current_tax_year: current_tax_year, filing_year: current_tax_year + 1).each do |condition| %>
          <li><%= condition %></li>
        <% end %>
      </ul>
    <% end %>

  <div class="form-card--yes-no spacing-above-25">
    <div class="options-wrapper">
      <% if @puerto_rico_filing %>
        <%= link_to Ctc::Questions::Dependents::InfoController.to_path_helper(id: current_intake.new_dependent_token), class: "button button--wide text--centered spacing-above-35" do %>
          <%= t("views.ctc.questions.dependents.does_not_qualify_ctc.pr.affirmative") %>
        <% end %>
        <%= link_to Ctc::Questions::NoDependentsController.to_path_helper, class: "button button--wide text--centered" do %>
          <%= t("views.ctc.questions.dependents.does_not_qualify_ctc.pr.negative") %>
        <% end %>
      <% else %>
        <div class="yes-no-buttons">
          <%= link_to Ctc::Questions::Dependents::InfoController.to_path_helper(id: current_intake.new_dependent_token), class: "button button--icon button--icon--centered button--med-wide" do %>
            <%= image_tag("checkmark.svg", alt: "") %>
            <%= t("general.affirmative") %>
          <% end %>
          <%= link_to next_path, class: "button button--icon button--icon--centered button--med-wide" do %>
            <%= image_tag("crossmark.svg", alt: "") %>
            <%= t("general.negative") %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>