<% @main_question = t("views.ctc.questions.stimulus_received.title") %>

<% content_for :page_title, @main_question %>

<% content_for :form_card do %>
  <h1 class="h2"><%= @main_question %></h1>

  <div class="review-box spacing-below-60">
    <div class="review-box__title spacing-below-15">
      <h2><%= t("views.ctc.questions.stimulus_received.amount_received") %></h2>
      <%= link_to t("general.edit").downcase, questions_stimulus_one_path, class: "review-box__edit" %>
    </div>
    <p class="spacing-below-15"><%= t("views.ctc.questions.stimulus_received.eip_one") %>: <%= calculated_or_provided_dollar_amount(current_intake.eip1_amount_received) %></p>
    <p class="spacing-below-0"><%= t("views.ctc.questions.stimulus_received.eip_two") %>: <%= calculated_or_provided_dollar_amount(current_intake.eip2_amount_received) %></p>
  </div>

  <%= link_to t("general.continue"), questions_refund_payment_path, class: "button button--wide button--primary text--centered" %>
<% end %>
