<% content_for :page_title, t("views.ctc.questions.spouse_filed2019.title") %>

<% content_for :form_card do %>
  <%= form_with model: @form, url: current_path, local: true, method: "put", builder: VitaMinFormBuilder, html: { class: "form-card form-card--long" } do |f| %>
    <h1 class="h2"><%= content_for(:page_title) %></h1>
    <p>
      <%=t("views.ctc.questions.spouse_filed2019.help_text") %>
    </p>

    <div class="form-card__content">
      <%= f.cfa_radio_set(
            :spouse_filed_2019,
            collection: [
              { value: :filed_full_joint, label: t("views.ctc.questions.spouse_filed2019.filed_full_joint") },
              { value: :filed_non_filer_joint, label: t("views.ctc.questions.spouse_filed2019.filed_non_filer_joint") },
              { value: :filed_full_separate, label: t("views.ctc.questions.spouse_filed2019.filed_full_separate") },
              { value: :filed_non_filer_separate, label: t("views.ctc.questions.spouse_filed2019.filed_non_filer_separate") },
              { value: :did_not_file, label: t("views.ctc.questions.spouse_filed2019.did_not_file") },
            ]
          )
      %>
    </div>

    <button class="button button--primary button--wide spacing-below-15" type="submit">
      <%=t("general.continue") %>
    </button>
  <% end %>
<% end %>
