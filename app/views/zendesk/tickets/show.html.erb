<% content_for :page_title, "#{@ticket.subject}, ##{@ticket.id}" %>

<% content_for :card do %>
  <div class="header">
    <h1 class="h2">
      <%= @ticket.subject %>
    </h1>
    <h2>
      <%= link_to(
              "##{@ticket.id}", "https://eitc.zendesk.com/agent/tickets/#{@ticket.id}",
              class: "ticket-link",
              target: "_blank"
          ) %>
    </h2>
    <p class="text--smaller">
      <%=t("zendesk.tickets.show.chart.header") %>
    </p>
  </div>

  <table class="data-table document-table">
    <thead>
      <tr>
        <th class="document-column__doc-type"><%=t("zendesk.tickets.show.chart.doc_type") %></th>
        <th class="document-column__link"><%=t("zendesk.tickets.show.chart.link") %></th>
        <th class="document-column__upload-date"><%=t("zendesk.tickets.show.chart.upload_date") %></th>
        <th class="document-column__notes"><%=t("zendesk.tickets.show.chart.notes") %></th>
      </tr>
    </thead>
    <tbody>
      <% @intakes.each do |intake| %>
        <tr>
          <td> 13614-C </td>
          <td>
            <%= link_to pdf_zendesk_intake_path(
              intake.id,
              filename: "13614c_#{intake.name_for_filename}.pdf"
            ), target: "_blank" do %>
              <%= "13614c_#{intake.name_for_filename}.pdf" %>
            <% end %>
          </td>
          <td></td>
          <td></td>
        </tr>
      <% end %>
      <% @intakes.each do |intake| %>
        <tr>
          <td> <%=t("zendesk.tickets.show.chart.consent") %> </td>
          <td>
            <%= link_to consent_pdf_zendesk_intake_path(
              intake.id,
              filename: "Consent_#{intake.name_for_filename}.pdf",
            ), target: "_blank" do %>
              <%= "Consent_#{intake.name_for_filename}.pdf" %>
            <% end %>
          </td>
          <td></td>
          <td></td>
        </tr>
      <% end %>
      <% if @document_groups.present? %>
        <% @document_groups.each do |type, documents| %>
          <% documents.each do |document| %>
            <tr>
              <td> <%= type %> </td>
              <td>
                <%= link_to zendesk_document_path(document.id), target: "_blank" do %>
                  <%= document.upload.filename %>
                <% end %>
              </td>
              <td> <%= document.uploaded_ago %> </td>
              <td class="document-notes">
                <% if document.notes.present? %>
                  <%= image_tag "document-notes.svg", alt: "", class: "icon--inline-notice" %>
                  <%= document.notes %>
                <% end %>
              </td>
            </tr>
          <% end %>
        <% end %>
      <% end %>
      <% @intakes.select { |intake| intake.bank_account_number.present? }.each do |intake| %>
        <tr>
          <td> <%=t("zendesk.tickets.show.chart.bank_info") %> </td>
          <td>
            <%= link_to t("zendesk.tickets.show.chart.bank_info"), banking_info_zendesk_intake_path(intake.id)  %>
            <%= link_to "Bank Info", banking_info_zendesk_intake_path(intake.id), target: "_blank" %>
          </td>
          <td></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
