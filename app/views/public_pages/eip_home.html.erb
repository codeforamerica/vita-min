<% content_for :page_title do%>
  <%= t('views.public_pages.eip_home.title') %>
<% end %>

<% content_for :body_class, "body--home" %>

<main role="main">
  <div class="slab slab--hero">
    <div class="grid stimulus">
      <div class="grid__item width-one-half">
        <h1 class="landing-page-header">
          <%= t('views.public_pages.eip_home.header') %>
        </h1>
        <p class="landing-page-subheader">
          <strong><%= t('views.public_pages.eip_home.subheader1') %></strong>
        </p>
        <p class="landing-page-subheader">
          <strong><%= t('views.public_pages.eip_home.subheader2') %></strong>
        </p>
        <%= link_to stimulus_filed_recently_path,
                    class: "button button--primary button--wide text--centered" do %>
          <%= t("general.start_filing") %>
        <% end %>
        <p class="landing-page-subheader">
          <strong><%= t('views.public_pages.eip_home.questions_html', :faq_link => link_to(t('views.public_pages.eip_home.questions_cta'), stimulus_path)) %></strong>
        </p>
      </div>
    </div>
  </div>
</main>
