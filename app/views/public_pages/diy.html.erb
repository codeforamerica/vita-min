<% content_for :page_title do%>
  <%= t('views.public_pages.diy_home.title') %>
<% end %>

<% content_for :body_class, "body--home" %>

<main role="main">
  <div class="slab slab--hero">
    <div class="grid">
      <div class="grid__item width-one-half">
        <h1 class="landing-page-header">
          <%= content_for :page_title %>
        </h1>
        <p class="landing-page-subheader">
          <strong class="text--line-breaks"><%= t('views.public_pages.diy_home.body') %></strong>
        </p>
        <div>
          <%= link_to diy_file_yourself_path, class: "button button--primary text--centered" do %>
            <%= t("general.continue") %>
          <% end %>
        </div>
      </div>

      <div class="grid__item width-one-half hero-illustration">
        <%= render 'half_grid_hero_images' %>
      </div>
    </div>
  </div>
</main>
