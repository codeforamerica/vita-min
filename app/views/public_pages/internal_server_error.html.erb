<% content_for :page_title, "Oops, we're sorry, but something went wrong." %>

<main role="main">
  <section class="slab slab--white">
    <div class="grid">
      <div class="grid__item width-three-fourths shift-one-eighth">
        <main role="main">
          <div class="offboarding--illustration">
            <%= image_tag("server-error.svg", alt: "") %>
          </div>
          <h1 class="offboarding--title">
            <%= content_for(:page_title) %>
          </h1>

          <div class="offboarding--help-text">
            <p>
              It looks like there was a server error. We've been notified of the issue and will work to fix it!
            </p>

            <p>
              <strong>
                If you’re running into trouble, we’re here for you. You can reach us using the "Help"/"Chat" button in the bottom right or by sending us an email at <a href="mailto:hello@getyourrefund.org">hello@getyourrefund.org</a>.
              </strong>
            </p>
          </div>

          <div class="buttons--vertical-stack">
            <%= link_to root_path, class: "button button--primary button--wide text--centered" do %>
              Return to home
            <% end %>
          </div>
        </main>
      </div>
    </div>
  </section>
</main>
