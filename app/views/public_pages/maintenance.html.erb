<% content_for :page_title, t("views.ctc.questions.at_capacity.title") %>
<% content_for :header do %>
  <%= render 'shared/header', variation: "gyr", home_link: root_path %>
<% end %>
<% content_for :footer do %>
  <footer class="footer">
    <div class="slab slab--footer">
      <div class="grid">
        <div class="grid__item width-three-fourths footer-description">
          <p>
            <%= image_tag("checkbox-logo--white.png", alt: "") %>
          </p>
          <p>
            <% cfa_link = link_to("Code for America", "https://www.codeforamerica.org", target: "_blank", rel: "noopener", class: "footer__link") %>
            <%= t("views.shared.footer.service_description_html", cfa_link: cfa_link) %>
          </p>
        </div>
      </div>
    </div>
  </footer>
<% end %>

<div class="main-content-inner">
  <section class="slab slab--white">
    <div class="grid">
      <div class="grid__item width-three-fourths">
        <div class="main-content-inner">
          <div class="offboarding--illustration">
            <%= image_tag("questions/capacity.svg", alt: "") %>
          </div>
          <h1 class="offboarding--title">
            <%= content_for(:page_title) %>
          </h1>

          <div class="offboarding--help-text">
            <p>
              <%=t("views.ctc.questions.at_capacity.p1") %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
