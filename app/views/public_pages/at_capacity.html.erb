<% content_for :page_title, t("views.public_pages.at_capacity.title") %>

<main role="main">
  <section class="slab slab--white">
    <div class="grid">
      <div class="grid__item width-three-fourths shift-one-eighth">
        <main role="main">
          <div class="offboarding--illustration">
            <%= image_tag("capacity.svg", alt: "") %>
          </div>
          <h1 class="offboarding--title">
            <%= content_for(:page_title) %>
          </h1>

          <div class="offboarding--help-text">
            <p>
              <%=t("views.public_pages.at_capacity.body") %>
            </p>
            <p>
              <%=t("views.public_pages.at_capacity.alternative_html", :irs_link => link_to(t("general.irs_free_file"), "https://apps.irs.gov/app/freeFile/jsp/wizard.jsp", target: "_blank", rel: "noopener", "data-track-click": "freefile")) %>
            </p>
            <strong><%=t("views.public_pages.at_capacity.check_back") %></strong>
          </div>
        </main>
      </div>
    </div>
  </section>
</main>
