<% content_for :page_title, t("views.public_pages.page_not_found.title") %>
<% content_for :main do %>
<main role="main">
  <section class="slab slab--white">
    <div class="grid">
      <div class="grid__item width-three-fourths shift-one-eighth">
        <main role="main">
          <div class="offboarding--illustration">
            <%= image_tag("page-not-found.svg", alt: "") %>
          </div>
          <h1 class="offboarding--title">
            <%= content_for(:page_title) %>
          </h1>

          <div class="offboarding--help-text">
            <p><%=t("views.public_pages.page_not_found.info_html") %></p>
            <p>
              <strong>
                <%=t("views.public_pages.page_not_found.let_us_know_html", :email_link => mail_to("support@getyourrefund.org")) %>
              </strong>
            </p>
          </div>
          <div class="buttons--vertical-stack">
            <%= link_to t("general.return_home"), root_path, class: "button button--primary button--wide text--centered" %>
          </div>
        </main>
      </div>
    </div>
  </section>
</main>
<% end %>
