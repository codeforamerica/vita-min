<% content_for :page_title, "Oops, we're sorry, but the page you're looking for can't be found." %>

<main role="main">
  <section class="slab slab--white">
    <div class="grid">
      <div class="grid__item width-three-fourths shift-one-eighth">
        <main role="main">
          <div class="offboarding--illustration">
            <%= image_tag("page-not-found.svg", alt: "") %>
          </div>
          <h1 class="offboarding--title">
            <%= content_for(:page_title) %>
          </h1>

          <div class="offboarding--help-text">
            <p>
              The page you're trying to access isn't available.
            </p>

            <p>
              <strong>
                If you followed a link here, please let us know using the "Help"/"Chat" button in the bottom right or by sending us an email at <a href="mailto:hello@getyourrefund.org">hello@getyourrefund.org</a>.
              </strong>
            </p>
          </div>
          <div class="buttons--vertical-stack">
            <%= link_to root_path, class: "button button--primary button--wide text--centered" do %>
              Return to home
            <% end %>
          </div>
        </main>
      </div>
    </div>
  </section>
</main>
