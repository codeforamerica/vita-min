<% content_for :page_title, t("public_pages.stimulus_payment.title") %>
<% content_for :body_class, "stimulus" %>

<%= render("shared/breadcrumb") %>

<main role="main">
  <section class="slab slab--white">
    <div class="grid">
      <div class="grid__item width-two-thirds">
        <h1 class="h2"><%=t("public_pages.stimulus_payment.header") %></h1>
        <p><%=t("public_pages.stimulus_payment.intro.description") %></p>
        <p><%=t("public_pages.stimulus_payment.intro.common_questions") %></p>
        <p class="hint last">
          <%=t("public_pages.stimulus_payment.intro.irs_info_html", :irs_eip_link => link_to("IRS.gov/eip", "https://irs.gov/eip", target: "_blank", rel: "noopener", "data-track-click": "stimulus-irs-eip", "data-track-attribute-position": "intro")) %>
        </p>
      </div>
    </div>
    <div class="grid spacing-above-60 stimulus-info">
      <div class="grid__item width-one-twelfth">
        <%= image_tag("stimulus-who.svg", class: 'stimulus-logo', alt: "") %>
      </div>
      <div class="grid__item width-seven-twelfths">
        <h2 class="h3"><%=t("public_pages.stimulus_payment.intro.eligibility.header") %></h2>
        <p class="last"><%=t("public_pages.stimulus_payment.intro.eligibility.info") %></p>
      </div>
    </div>
    <div class="grid spacing-above-35 stimulus-info">
      <div class="grid__item width-one-twelfth">
        <%= image_tag("stimulus-cash.svg", alt: "") %>
      </div>
      <div class="grid__item width-seven-twelfths">
        <h2 class="h3"><%=t("public_pages.stimulus_payment.intro.payments.header") %></h2>
        <p><%=t("public_pages.stimulus_payment.intro.payments.info") %></p>
        <p class="note"><%=t("public_pages.stimulus_payment.intro.payments.exceptions.header") %></p>
        <ul class="exceptions last">
          <li><%=t("public_pages.stimulus_payment.intro.payments.exceptions.social_security") %></li>
          <li><%=t("public_pages.stimulus_payment.intro.payments.exceptions.veterans") %></li>
          <li><%=t("public_pages.stimulus_payment.intro.payments.exceptions.railroad") %></li>
        </ul>
      </div>
    </div>
    <div class="grid spacing-above-35 stimulus-info">
      <div class="grid__item width-one-twelfth">
        <%= image_tag("stimulus-benefits.svg", alt: "") %>
      </div>
      <div class="grid__item width-two-thirds">
        <h2 class="h3"><%=t("public_pages.stimulus_payment.intro.benefits.header") %></h2>
        <p class="last"><%=t("public_pages.stimulus_payment.intro.benefits.info") %></p>
      </div>
    </div>
    <div class="grid spacing-above-60">
      <div class="grid__item width-three-fourths">
        <h2><%=t("public_pages.stimulus_payment.faq.how_to_get_paid.header") %></h2>
        <div class="accordion">
          <a href="#" class="accordion__button" aria-expanded="true" aria-controls="a1">
            <h3><%=t("public_pages.stimulus_payment.faq.how_to_get_paid.eip_check.q") %></h3>
          </a>
          <div class="accordion__content" id="a1">
            <p><%=t("public_pages.stimulus_payment.faq.how_to_get_paid.eip_check.a") %></p>
          </div>
        </div>
        <div class="accordion">
          <a href="#" class="accordion__button" aria-expanded="true" aria-controls="a2">
            <h3><%=t("public_pages.stimulus_payment.faq.how_to_get_paid.did_not_provide_bank_account.q") %></h3>
          </a>
          <div class="accordion__content" id="a2">
            <p>
              <%=t("public_pages.stimulus_payment.faq.how_to_get_paid.did_not_provide_bank_account.a_html", :irs_get_my_payment_link => link_to(t("general.get_my_payment"), "https://www.irs.gov/coronavirus/get-my-payment", target: "_blank", rel: "noopener", "data-track-click": "stimulus-irs-get-my-payment", "data-track-attribute-position": "faq2")) %>
            </p>
          </div>
        </div>
        <div class="accordion">
          <a href="#" class="accordion__button" aria-expanded="true" aria-controls="a3">
            <h3><%=t("public_pages.stimulus_payment.faq.how_to_get_paid.payment_amount.q") %></h3>
          </a>
          <div class="accordion__content" id="a3">
            <p>
              <%=t("public_pages.stimulus_payment.faq.how_to_get_paid.payment_amount.a_html", :irs_eip_calculator_link => link_to(t("public_pages.stimulus_payment.faq.how_to_get_paid.payment_amount.calculate_eip_website_title"), "https://www.irs.gov/pub/irs-utl/how_do_I_calculate_my_eip.pdf", target: "_blank", rel: "noopener", "data-track-click": "stimulus-irs-calculate-eip", "data-track-attribute-position": "faq3")) %>
            </p>
          </div>
        </div>
        <div class="accordion">
          <a href="#" class="accordion__button" aria-expanded="true" aria-controls="a4">
            <h3><%=t("public_pages.stimulus_payment.faq.how_to_get_paid.change_information.q") %></h3>
          </a>
          <div class="accordion__content" id="a4">
            <p>
              <%=t("public_pages.stimulus_payment.faq.how_to_get_paid.change_information.a_html", :irs_get_my_payment_link => link_to(t("general.get_my_payment"), "https://www.irs.gov/coronavirus/get-my-payment", target: "_blank", rel: "noopener", "data-track-click": "stimulus-irs-get-my-payment", "data-track-attribute-position": "faq4")) %>
            </p>
          </div>
        </div>
        <div class="accordion">
          <a href="#" class="accordion__button" aria-expanded="true" aria-controls="a5">
            <h3><%=t("public_pages.stimulus_payment.faq.how_to_get_paid.non_filer.q") %></h3>
          </a>
          <div class="accordion__content" id="a5">
            <p><%=t("public_pages.stimulus_payment.faq.how_to_get_paid.non_filer.a") %></p>
          </div>
        </div>
        <div class="accordion">
          <a href="#" class="accordion__button" aria-expanded="true" aria-controls="a6">
            <h3><%=t("public_pages.stimulus_payment.faq.how_to_get_paid.no_income.q") %></h3>
          </a>
          <div class="accordion__content" id="a6">
            <p>
              <%=t("public_pages.stimulus_payment.faq.how_to_get_paid.no_income.a_html", :irs_enter_payment_info_link => link_to(t("public_pages.stimulus_payment.faq.how_to_get_paid.no_income.enter_payment_info_website_title"), "https://www.irs.gov/coronavirus/non-filers-enter-payment-info-here", target: "_blank", rel: "noopener", "data-track-click": "stimulus-irs-enter-payment-info", "data-track-attribute-position": "faq6")) %>
            </p>
          </div>
        </div>
        <div class="accordion">
          <a href="#" class="accordion__button" aria-expanded="true" aria-controls="a7">
            <h3><%=t("public_pages.stimulus_payment.faq.how_to_get_paid.no_bank_account.q") %></h3>
          </a>
          <div class="accordion__content" id="a7">
            <p>
              <%=t("public_pages.stimulus_payment.faq.how_to_get_paid.no_bank_account.a_html", :irs_get_my_payment_link => link_to(t("general.get_my_payment"), "https://www.irs.gov/coronavirus/get-my-payment", target: "_blank", rel: "noopener", "data-track-click": "stimulus-irs-get-my-payment", "data-track-attribute-position": "faq7")) %>
            </p>
          </div>
        </div>
        <div class="accordion">
          <a href="#" class="accordion__button" aria-expanded="true" aria-controls="a8">
            <h3><%=t("public_pages.stimulus_payment.faq.how_to_get_paid.change_address.q") %></h3>
          </a>
          <div class="accordion__content" id="a8">
            <p>
              <%=t("public_pages.stimulus_payment.faq.how_to_get_paid.change_address.a_html", :irs_address_change_link => link_to(t("public_pages.stimulus_payment.faq.how_to_get_paid.change_address.address_change"), "https://www.irs.gov/faqs/irs-procedures/address-changes", target: "_blank", rel: "noopener", "data-track-click": "stimulus-irs-address-changes", "data-track-attribute-position": "faq8")) %>
            </p>
          </div>
        </div>
      </div>
      <div class="grid__item width-three-fourths">
        <h2 class="spacing-above-35"><%=t("public_pages.stimulus_payment.faq.eip.header") %></h2>
        <div class="accordion">
          <a href="#" class="accordion__button" aria-expanded="true" aria-controls="a9">
            <h3><%=t("public_pages.stimulus_payment.faq.eip.when.q") %></h3>
          </a>
          <div class="accordion__content" id="a9">
            <p><%=t("public_pages.stimulus_payment.faq.eip.when.a") %></p>
          </div>
        </div>
        <div class="accordion">
          <a href="#" class="accordion__button" aria-expanded="true" aria-controls="a10">
