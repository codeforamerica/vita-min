        <div class="accordion">
          <a href="#" class="accordion__button" aria-expanded="true" aria-controls="a15">
            <h3><%=t("public_pages.stimulus_payment.faq.eip.scams.q") %></h3>
          </a>
          <div class="accordion__content" id="a15">
            <p><%=t("public_pages.stimulus_payment.faq.eip.scams.a") %></p>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>