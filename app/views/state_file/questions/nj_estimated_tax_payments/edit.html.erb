<%
  title = t(".title_html", filing_year: current_tax_year)
  content_for :page_title, title
%>

<% content_for :card do %>
  <h1 class="h2"><%= title %></h1>

  <%= t(".description_html", filing_year: current_tax_year) %>

  <%= form_with model: @form, url: { action: :update }, local: true, method: "put", builder: VitaMinFormBuilder do |f| %>

    <div class="white-group">
      <div class="question-with-follow-up">
        <div class="question-with-follow-up__question spacing-below-25">
          <%=
            f.cfa_radio_set(
              :has_estimated_payments,
              label_text: t('.radio_label', filing_year: current_tax_year),
              collection: [
                { value: :no, label: t(".no_text") },
                { value: :yes, label: t("general.affirmative"), input_html: { "data-follow-up": "#estimated-payments-field" } },
              ],
            )
          %>
        </div>
        <div class="question-with-follow-up__follow-up" id="estimated-payments-field">
          <%= f.vita_min_money_field(
                :estimated_tax_payments,
                t('.input_label_html', filing_year: current_tax_year),
                classes: ["form-width--long"],
                options: { placeholder: "0" }
              ) %>
        </div>
      </div>
    </div>

    <% if params[:return_to_review].present? %>
      <%= hidden_field_tag "return_to_review", params[:return_to_review] %>
    <% end %>
    <%= f.continue %>
  <% end %>
<% end %>
