<%
  title = t(".title")
  content_for :page_title, title
%>

<% content_for :card do %>
  <%= form_with model: @form, url: { action: :update }, local: true, method: "put", builder: VitaMinFormBuilder do |f| %>
    <h1 class="h2"><%= title %></h1>
    <p><%= t(".description_html") %></p>

    <div class="white-group">
      <%= f.vita_min_money_field(:rent_paid, t('.label_html'), options: { placeholder: '0' }, classes: ["form-width--long"]) %>
    </div>

    <div class="reveal">
      <button class="reveal__button"><%= t('.helper_anchor_heading') %></button>
      <div class="reveal__content">
        <p><%= t('.helper_anchor_description_html') %></p>
      </div>
    </div>

    <div class="reveal">
      <button class="reveal__button"><%= t('.helper_heading') %></button>
      <div class="reveal__content">
        <p><%= t('.helper_description') %></p>
      </div>
    </div>

    <% if params[:return_to_review].present? %>
      <%= hidden_field_tag "return_to_review", params[:return_to_review] %>
    <% end %>

    <%= f.continue %>
  <% end %>
<% end %>
