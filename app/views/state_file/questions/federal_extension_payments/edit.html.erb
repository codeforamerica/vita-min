<% title = t(".title")%>

<% content_for :page_title, title %>
<% content_for :card do %>
  <div class="spacing-above-25">
    <h1 class="h2"><%= title %></h1>
    <p><%= t(".subtitle_1") %></p>
    <p><%= t(".subtitle_2") %></p>
    <ul class="list--bulleted spacing-below-10">
      <li><%= t(".list_1") %></li>
      <li><%= t(".list_2_html") %></li>
    </ul>
  </div>

  <%= form_with model: @form, url: { action: :update }, local: true, method: "put", builder: VitaMinFormBuilder do |f| %>
    <div class="white-group">
      <%= f.cfa_radio_set(:paid_federal_extension_payments, collection: [
        { value: "yes", label: t(".true") },
        { value: "no", label: t(".false") },
      ]) %>
    </div>

    <%= f.continue %>
  <% end %>
<% end %>