<% content_for :page_title, "The confirmation page" %>

<% content_for :card do %>
  <h1 class="h2">You have successfully submitted your taxes</h1>
  <%= link_to "Show XML", StateFile::Questions::ConfirmationController.to_path_helper(us_state: params[:us_state], action: :show_xml), class: "button button--primary" %>

  <%= link_to "Download PDF", StateFile::Questions::SubmissionPdfsController.to_path_helper(us_state: params[:us_state], action: :show, id: EfileSubmission.where(data_source: current_intake).first), class: "button button--primary" %>

  <%= link_to "Explain Calculations", StateFile::Questions::ConfirmationController.to_path_helper(us_state: params[:us_state], action: :explain_calculations), class: "button button--primary" %>

  <%= form_with model: @form, url: { action: :update }, local: true, method: "put", builder: VitaMinFormBuilder, html: { class: "form-card" } do |f| %>
    <%= f.submit("Go Home", class: "button") %>
  <% end %>
<% end %>
