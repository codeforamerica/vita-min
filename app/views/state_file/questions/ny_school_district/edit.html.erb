<% title = t(".title", filing_year: Rails.configuration.statefile_current_tax_year) %>
<% content_for :page_title, title %>

<% content_for :card do %>
  <h1 class="h2"><%= title %></h1>

  <%= form_with model: @form, url: { action: :update }, local: true, method: "put", builder: QuestionsFormBuilder do |f| %>
    <div class="blue-group">
      <%= f.vita_min_state_file_select(
            :school_district_id ,
            t(".school_district_name"),
            NySchoolDistricts.district_select_options_for_county(current_intake.residence_county),
            label_class: 'form-label--bold',
            prompt: t('general.select_prompt')) %>
    </div>

    <div class="reveal">
      <p><a href="#" class="reveal__link"><%= t('.helper_heading') %></a></p>
      <div class="reveal__content">
        <p><%= t('.helper_description_html') %></p>
      </div>
    </div>

    <% if params[:return_to_review].present? %>
      <%= hidden_field_tag "return_to_review", params[:return_to_review] %>
    <% end %>
    <%= f.continue %>
  <% end %>
<% end %>
