<% title = t(".title", filing_year: current_tax_year) %>
<% content_for :page_title, title %>

<% content_for :card do %>
  <h1 class="h2"><%= title %></h1>

  <%= form_with model: @form, url: { action: :update }, local: true, method: "put", builder: VitaMinFormBuilder do |f| %>
    <div class="white-group">
      <%= f.vita_min_state_file_select(
            :school_district_id ,
            t(".school_district_name"),
            NySchoolDistricts.district_select_options_for_county(current_intake.residence_county),
            label_class: 'form-label--bold',
            prompt: t('general.select_prompt')) %>
    </div>

    <div class="reveal">
      <p><button class="reveal__button"><%= t('.helper_heading') %></button></p>
      <div class="reveal__content">
        <p><%= t('.helper_description_html') %></p>
      </div>
    </div>

    <%= render "state_file/questions/shared/continue_button", f: f %>
  <% end %>
<% end %>
