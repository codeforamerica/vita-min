<% if current_intake.efile_submissions.count > 1 %>
  <% title = t('.title_resubmit', state_name: current_state_name) %>
<% else %>
  <% title = t('.title', state_name: current_state_name) %>
<% end %>

<% content_for :page_title, title %>
<% content_for :card do %>
  <div class='return-status'>
    <p>
      <%= image_tag("icons/check.svg", alt: "") %>
    </p>
  </div>

  <h1 class="h2"><%= title %></h1>

  <p>
    <% if Flipper.enabled?(:sms_notifications) %>
      <%= t(".email_text_update") %>
    <% else %>
      <%= t(".email_update") %>
    <% end %>
  </p>

  <p>
    <a target="_blank" rel="noopener nofollow" href="https://vote.gov/"><%= t('.register_to_vote') %></a>
  </p>

  <% if current_state_code == "ny" %>
    <p><%= t(".ny_notifications_signup_html") %></p>
  <% end %>

  <p><%= t('general.spread_the_word_html') %></p>

  <%= link_to t(".download_state_return_pdf"), StateFile::Questions::SubmissionPdfsController.to_path_helper(us_state: current_state_code, action: :show, id: EfileSubmission.where(data_source: current_intake).first), class: "button button--primary button--wide" %>

  <% if show_xml? %>
    <p>
      <% xml_bundle = EfileSubmission.where(data_source: current_intake).last&.submission_bundle %>
      <%= link_to "Main XML Doc", StateFile::Questions::ConfirmationController.to_path_helper(us_state: current_state_code, action: :show_xml), class: 'dev-button' %>
      <% if xml_bundle.present? %>
        <%= link_to "Full XML Bundle", rails_blob_path(xml_bundle, disposition: "attachment"), class: 'dev-button' %>
      <% end %>
      <%= link_to "Explain Calculations", StateFile::Questions::ConfirmationController.to_path_helper(us_state: current_state_code, action: :explain_calculations), class: 'dev-button' %>
    </p>
  <% end %>
<% end %>
