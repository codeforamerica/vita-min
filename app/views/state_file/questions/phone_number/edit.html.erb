<% title = t(".title") %>
<% content_for :page_title, title %>
<% content_for :card do %>
  <h1 class="h2" id="main-question"><%= title %></h1>
  <p><%= t(".subtitle_html") %></p>

    <%= form_with model: @form, url: { action: :update }, local: true, method: "put", builder: VitaMinFormBuilder do |f| %>
    <div class="white-group">
        <%= f.cfa_input_field(:phone_number, t(".phone_number_label"), help_text: t('.helper_text'), classes: ["form-width--long"], type: "tel", options: { autocomplete: "tel", required: true }) %>
    </div>

      <%= f.submit t(".action"), class: "button button--primary button--wide spacing-below-15" %>
    <% end %>
  <div class="reveal">
    <p><button class="reveal__button"><%= t('.messaging_details') %></button></p>
    <div class="reveal__content">
      <p><%= t('.message_body_one') %></p>
      <p><%= t('.message_body_two_html') %></p>
    </div>
  </div>

  <%= render 'state_file/questions/shared/verification_shortcut' %>
<% end %>
