<% title = t(".title") %>
<% content_for :page_title, title %>
<% content_for :card do %>
  <div>
    <h1 class="h2" id="main-question"><%= title %></h1>
    <% if params[:us_state] == "ny" %>
      <p><%=t(".ny_text_html") %></p>
    <% end %>
    <p><%=t(".body_text_html") %></p>
  </div>
  <p><%=t(".read_text") %></p>

  <%= form_with model: @form, url: { action: :update }, local: true, method: "put", builder: VitaMinFormBuilder do |f| %>
    <%= f.button :submit, name: "#{f.object_name}[consented_to_terms_and_conditions]", value: 'yes', class: 'button button--primary', type: 'submit' do %>
      <%= t(".accept") %>
    <% end %>
    <%= f.button :submit, name: "#{f.object_name}[consented_to_terms_and_conditions]", value: 'no', class: 'button', type: 'submit' do %>
      <%= t(".decline") %>
    <% end %>
  <%end %>
<% end %>