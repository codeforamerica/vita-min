<footer class="footer">
  <div class="slab slab--footer">
    <div class="grid">
      <div class="grid__item width-three-fourths footer-description">
        <p>
          <%= image_tag("fyst-logo.svg", alt: "FileYourStateTaxes", title: "FileYourStateTaxes", class_names: "fyst-logo") %>
        </p>

        <p>
          <%=t('.state_file_description_html') %>
        </p>
      </div>


      <ul class="grid__item width-one-fourth footer-links">
        <% unless before_state_file_launch? %>
          <li>
            <%= mail_to "help@fileyourstatetaxes.org", t("general.contact_us")  %>
          </li>

          <li>
            <%= link_to t(".faq"), state_faq_path(us_state: 'us') %>
          </li>

          <li>
            <%= link_to t(".privacy_policy"), state_file_privacy_policy_path %>
          </li>

          <li>
            <%= link_to t(".sms_terms"), state_file_sms_terms_path %>
          </li>

          <li>
            <% if I18n.locale != :en %>
              <%= link_to_english %>
            <% end %>
            <% if I18n.locale != :es %>
              <%= link_to_spanish %>
            <% end %>
          </li>

          <% unless acts_like_production? %>
            <li class="spacing-above-60">
              <%= link_to "https://www.getyourrefundstatus.org/" do %>
                <%= t("views.shared.footer.service_status") %>
              <% end %>
            </li>

            <li><%= link_to "Flow explorer", flows_path %></li>

            <li>
              <%= link_to url_for(host: MultiTenantService.new(:gyr).host, controller: "/users/sessions", action: 'new') do %>
                <%= "Hub sign in" %>
              <% end %>
            </li>
          <% end %>
        <% end %>

        <% unless acts_like_production? %>
          <li><%= link_to "Session toggles", session_toggles_path, target: "_blank" %></li>
        <% end %>
      </ul>
    </div>
  </div>
</footer>
