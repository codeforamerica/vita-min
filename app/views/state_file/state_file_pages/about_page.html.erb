<% title = t(".header") %>

<div class="fyst-home-container">
  <div class="fyst-home-content">
    <h1 class="h1 strong" style="font-weight: bold"><%= title %></h1>
  </div>
  <%= image_tag 'questions/welcome.svg', class: 'fyst-home-image' %>
</div>

<div>
  <%= t(".subheader_html", login_path: login_options_path(us_state: "az")) %>
</div><br>
