      <div class="client-menu-item">
        <%= link_to "About", new_portal_client_login_path %>
      </div>
      <div class="client-menu-item">
        <%= link_to t("general.faq"), faq_path %>
      </div>
      <div class="client-menu-item">
        <%= link_to "Help", faq_path %>
      </div>

